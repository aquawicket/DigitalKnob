if(WIN)
	WIN_LIB(opengl32.lib)
endif()

if(MAC)
	FIND_LIBRARY(OpenGL_lib OpenGL)
	if(NOT OpenGL_lib)
		message(FATAL_ERROR "Could not locate OpenGL framework")
	endif()
	APPLE_LIB(${OpenGL_lib})
endif()

if(IOS)
	DKDEPEND(opengles)
endif()

if(IOSSIM)
	DKDEPEND(opengles)
endif()

if(LINUX)
	find_package(OpenGL REQUIRED)
	include_directories(${OpenGL_INCLUDE_DIRS})
	link_directories(${OpenGL_LIBRARY_DIRS})
	add_definitions(${OpenGL_DEFINITIONS})
	if(NOT OPENGL_FOUND)
    	message(FATAL_ERROR "COULD NOT FIND OPENGL")
	endif()
	LINUX_LIB(${OPENGL_LIBRARIES})
endif()

if(RASPBERRY)
	find_package(OpenGL REQUIRED)
	include_directories(${OpenGL_INCLUDE_DIRS})
	link_directories(${OpenGL_LIBRARY_DIRS})
	add_definitions(${OpenGL_DEFINITIONS})
	if(NOT OPENGL_FOUND)
    	message(FATAL_ERROR "COULD NOT FIND OPENGL")
	endif()
	RASPBERRY_LIB(${OPENGL_LIBRARIES})
endif()	

if(ANDROID)
	DKDEPEND(opengles)
endif()