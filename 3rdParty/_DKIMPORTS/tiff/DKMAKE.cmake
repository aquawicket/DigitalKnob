##ANDROID_NDK_RELEASE(tiff-${TIFF_VERSION})

ANDROID_PATH(${TIFF}/${OS})
ANDROID32_COMMAND(${DKCMAKE_WIN32} ${TIFF})
ANDROID64_COMMAND(${DKCMAKE_WIN64} ${TIFF})
