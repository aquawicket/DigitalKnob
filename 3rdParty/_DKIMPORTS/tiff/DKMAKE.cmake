## https://download.osgeo.org/libtiff/

### VERSION ###
DKSET(TIFF_VERSION 4.0.3)
DKSET(TIFF ${3RDPARTY}/tiff-${TIFF_VERSION})


### INSTALL ###
## https://download.osgeo.org/libtiff/old/tiff-4.0.3.zip
DKINSTALL(https://download.osgeo.org/libtiff/old/tiff-${TIFF_VERSION}.zip tiff tiff-${TIFF_VERSION})


### DKPLUGINS LINK ###
DKINCLUDE(${TIFF}/libtiff)
WIN_DEBUG_LIB(${TIFF}/${OS}/${DEBUG}/tiff-static.lib)
WIN_RELEASE_LIB(${TIFF}/${OS}/${RELEASE}/tiff-static.lib)
APPLE_DEBUG_LIB(${TIFF}/${OS}/${DEBUG}/libtiff-static.a)
APPLE_RELEASE_LIB(${TIFF}/${OS}/${RELEASE}/libtiff-static.a)
LINUX_DEBUG_LIB(${TIFF}/${OS}/${DEBUG}/libtiff-static.a)
LINUX_RELEASE_LIB(${TIFF}/${OS}/${RELEASE}/libtiff-static.a)
ANDROID_DEBUG_LIB(${TIFF}/${OS}/${DEBUG}/obj/local/armeabi-v7a/libtiff.a)
ANDROID_RELEASE_LIB(${TIFF}/${OS}/${RELEASE}/obj/local/armeabi-v7a/libtiff.a)
RASPBERRY_DEBUG_LIB(${TIFF}/${OS}/${DEBUG}/libtiff-static.a)
RASPBERRY_RELEASE_LIB(${TIFF}/${OS}/${RELEASE}/libtiff-static.a)


##"-DCMAKE_CXX_FLAGS=/I${TIFF}/libtiff /I${TIFF}/${OS}"
### 3RDPARTY LINK ###
DKSET(TIFF_WIN -DTIFF_INCLUDE_DIR=${TIFF}/libtiff -DTIFF_INCLUDE_DIR2=${TIFF}/${OS} -DTIFF_LIBRARY_DEBUG=${TIFF}/${OS}/${DEBUG}/tiff-static.lib -DTIFF_LIBRARY_RELEASE=${TIFF}/${OS}/${RELEASE}/tiff-static.lib)
DKSET(TIFF_APPLE "-DCMAKE_CXX_FLAGS= -I${TIFF}/libtiff -I${TIFF}/${OS}" -DTIFF_INCLUDE_DIR=${TIFF}/libtiff -DTIFF_INCLUDE_DIR2=${TIFF}/${OS} -DTIFF_LIBRARY_DEBUG=${TIFF}/${OS}/${DEBUG}/libtiff-static.a -DTIFF_LIBRARY_RELEASE=${TIFF}/${OS}/${RELEASE}/libtiff-static.a)
DKSET(TIFF_LINUX "-DCMAKE_CXX_FLAGS= -I${TIFF}/libtiff -I${TIFF}/${OS}/${RELEASE}" -DTIFF_INCLUDE_DIR=${TIFF}/libtiff -DTIFF_INCLUDE_DIR2=${TIFF}/${OS} -DTIFF_LIBRARY_DEBUG=${TIFF}/${OS}/${DEBUG}/libtiff-static.a -DTIFF_LIBRARY_RELEASE=${TIFF}/${OS}/${RELEASE}/libtiff-static.a)
	

### COMPILE ###
WIN_PATH(${TIFF}/${OS})
WIN32_COMMAND(${CMAKE_COMMAND} -G ${GENERATOR} -A Win32 "-DCMAKE_CXX_FLAGS=/DWIN32 /D_WINDOWS /W3 /nologo /GR /EHsc" "-DCMAKE_CXX_FLAGS_DEBUG=/MTd /Od /Ob0 /Zi /RTC1 /DDEBUG /D_DEBUG" "-DCMAKE_CXX_FLAGS_RELEASE=/MT /O2 /Ob2 /DNDEBUG" ${TIFF})
WIN64_COMMAND(${CMAKE_COMMAND} -G ${GENERATOR} -A x64 "-DCMAKE_CXX_FLAGS=/DWIN32 /D_WINDOWS /W3 /nologo" "-DCMAKE_CXX_FLAGS_DEBUG=/MTd /Od /Ob0 /Zi /RTC1 /DDEBUG /D_DEBUG" "-DCMAKE_CXX_FLAGS_RELEASE=/MT /O2 /Ob2 /DNDEBUG" ${TIFF})
WIN_VS(tiff-${TIFF_VERSION} tiff.sln tiff-static)


MAC_PATH(${TIFF}/${OS})
MAC_COMMAND(${CMAKE_COMMAND} -G "Xcode" -DCMAKE_OSX_ARCHITECTURES=x86_64 ${TIFF})
MAC_XCODE_DEBUG(tiff-${TIFF_VERSION} tiff-static)
MAC_XCODE_RELEASE(tiff-${TIFF_VERSION} tiff-static)


IOS_PATH(${TIFF}/${OS})
IOS_COMMAND(${CMAKE_COMMAND} -G "Xcode" -DCMAKE_TOOLCHAIN_FILE=${DKCMAKE}/iOS.cmake -DIOS_PLATFORM=OS ${TIFF})
IOS_XCODE_DEBUG(tiff-${TIFF_VERSION} tiff-static)
IOS_XCODE_RELEASE(tiff-${TIFF_VERSION} tiff-static)


IOSSIM_PATH(${TIFF}/${OS})
IOSSIM_COMMAND(${CMAKE_COMMAND} -G "Xcode" -DCMAKE_TOOLCHAIN_FILE=${DKCMAKE}/iOS.cmake -DIOS_PLATFORM=SIMULATOR64 ${TIFF})
IOSSIM_XCODE_DEBUG(tiff-${TIFF_VERSION} tiff-static)
IOSSIM_XCODE_RELEASE(tiff-${TIFF_VERSION} tiff-static)


LINUX_DEBUG_PATH(${TIFF}/${OS}/${DEBUG})
LINUX_DEBUG_COMMAND(${CMAKE_COMMAND} -G "Unix Makefiles" -DCMAKE_BUILD_TYPE=DEBUG ${TIFF})
LINUX_DEBUG_COMMAND(make tiff-static)

LINUX_RELEASE_PATH(${TIFF}/${OS}/${RELEASE})
LINUX_RELEASE_COMMAND(${CMAKE_COMMAND} -G "Unix Makefiles" -DCMAKE_BUILD_TYPE=RELEASE ${TIFF})
LINUX_RELEASE_COMMAND(make tiff-static)


RASPBERRY_DEBUG_PATH(${TIFF}/${OS}/${DEBUG})
RASPBERRY_DEBUG_COMMAND(${CMAKE_COMMAND} -G "Unix Makefiles" -DCMAKE_BUILD_TYPE=DEBUG ${TIFF})
RASPBERRY_DEBUG_COMMAND(make tiff-static)

RASPBERRY_RELEASE_PATH(${TIFF}/${OS}/${RELEASE})
RASPBERRY_RELEASE_COMMAND(${CMAKE_COMMAND} -G "Unix Makefiles" -DCMAKE_BUILD_TYPE=RELEASE ${TIFF})
RASPBERRY_RELEASE_COMMAND(make tiff-static)


ANDROID_NDK_DEBUG(tiff-${TIFF_VERSION})
ANDROID_NDK_RELEASE(tiff-${TIFF_VERSION})
