# https://www.libsdl.org/projects/SDL_ttf
# https://github.com/aquawicket/SDL_ttf
#
# https://github.com/aquawicket/SDL_ttf/archive/refs/heads/main.zip
# https://www.libsdl.org/projects/SDL_ttf/release/SDL2_ttf-2.0.15.zip

### DEPENDS ###
DKDEPEND(sdl2)
DKDEPEND(freetype)


### VERSION ###
DKSET(SDLTTF_VERSION main)
DKSET(SDLTTF_NAME SDL2_ttf-${SDLTTF_VERSION})
DKSET(SDLTTF_DL https://github.com/aquawicket/SDL_ttf/archive/refs/heads/${SDLTTF_VERSION}.zip)
DKSET(SDLTTF ${3RDPARTY}/${SDLTTF_NAME})


### INSTALL ###
DKINSTALL(${SDLTTF_DL} sdl2_ttf ${SDLTTF})



### LINK ###
DKINCLUDE(${SDLTTF})
WIN_DEBUG_LIB(${SDLTTF}/${OS}/lib/${DEBUG_DIR}/SDL_ttf.lib)
WIN_RELEASE_LIB(${SDLTTF}/${OS}/lib/${RELEASE_DIR}/SDL_ttf.lib)
APPLE_DEBUG_LIB(${SDLTTF}/${OS}/lib/Debug/SDL_ttf.a)
APPLE_RELEASE_LIB(${SDLTTF}/${OS}/lib/Release/SDL_ttf.a)
LINUX_DEBUG_LIB(${SDLTTF}/${OS}/${DEBUG_DIR}/lib/SDL_ttf.a)
LINUX_RELEASE_LIB(${SDLTTF}/${OS}/${RELEASE_DIR}/lib/SDL_ttf.a)
RASPBERRY_DEBUG_LIB(${SDLTTF}/${OS}/${DEBUG_DIR}/lib/SDL_ttf.a)
RASPBERRY_RELEASE_LIB(${SDLTTF}/${OS}/${RELEASE_DIR}/lib/SDL_ttf.a)
ANDROID_DEBUG_LIB(${SDLTTF}/${OS}/lib/${DEBUG_DIR}/SDL_ttf.a)
ANDROID_RELEASE_LIB(${SDLTTF}/${OS}/lib/${RELEASE_DIR}/SDL_ttf.a)




### COMPILE ###
DKSETPATH(${SDLTTF}/${BUILD_DIR})

WIN_COMMAND(${DKCMAKE_BUILD} -DSDLTTF_SUPPORT_WEBP=OFF ${SDL2_WIN} ${FREETYPE_WIN} ${SDLTTF})
WIN_VS(${SDLTTF_NAME} SDLTTF.sln SDLTTF)


MAC_COMMAND(${DKCMAKE_BUILD} -DSDLTTF_SUPPORT_WEBP=OFF ${SDL2_APPLE} ${FREETYPE_APPLE} ${SDLTTF})
MAC_XCODE(${SDLTTF_NAME} SDLTTF)


IOS_COMMAND(${DKCMAKE_BUILD} -DSDLTTF_SUPPORT_WEBP=OFF ${SDL2_APPLE} ${FREETYPE_APPLE} ${SDLTTF})
IOS_XCODE(${SDLTTF_NAME} SDLTTF)


IOSSIM_COMMAND(${DKCMAKE_BUILD} -DSDLTTF_SUPPORT_WEBP=OFF ${SDL2_APPLE} ${FREETYPE_APPLE} ${SDLTTF})
IOSSIM_XCODE(${SDLTTF_NAME} SDLTTF)


LINUX_COMMAND(${DKCMAKE_BUILD} -DSDLTTF_SUPPORT_WEBP=OFF ${SDL2_LINUX} ${FREETYPE_LINUX} ${SDLTTF})
LINUX_COMMAND(make SDLTTF)

RASPBERRY_COMMAND(${DKCMAKE_BUILD} -DSDLTTF_SUPPORT_WEBP=OFF ${SDL2_RASPBERRY} ${FREETYPE_RASPBERRY} ${SDLTTF})
RASPBERRY_COMMAND(make SDLTTF)


##ANDROID_NDK(${SDLTTF_NAME})
ANDROID_COMMAND(${DKCMAKE_BUILD} -DBUILD_SHARED_LIBS=OFF -DSDLTTF_SUPPORT_WEBP=OFF ${SDL2_ANDROID} ${FREETYPE_ANDROID} ${SDLTTF})
ANDROID_VS(${SDLTTF_NAME} SDL_ttf.sln SDL2_ttf)
