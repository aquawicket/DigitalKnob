RASPBERRY_RELEASE_PATH(${LIBRARY}/${OS}/${RELEASE_DIR})
RASPBERRY_RELEASE_COMMAND(${DKCMAKE_RASPBERRY_RELEASE} -DLIBRARY_STATIC ${LIBRARY})
RASPBERRY_RELEASE_COMMAND(make library-static)


