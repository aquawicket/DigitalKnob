### VERSION ###
DKSET(LIBRARY_VERSION 1.0.0)
DKSET(LIBRARY_NAME library-${LIBRARY_VERSION})
DKSET(LIBRARY_DL http://www.library.com/downloads/${LIBRARY_NAME}.zip)
DKSET(LIBRARY ${3RDPARTY}/${LIBRARY_NAME})


### INSTALL ###
DKINSTALL(${LIBRARY_DL} library ${LIBRARY})


### LINK ###
DKDEFINE(USING_LIBRARY)
DKINCLUDE(${LIBRARY}/include)
DKINCLUDE(${LIBRARY}/${OS})
WIN_DEBUG_LIB(${LIBRARY}/${OS}/${DEBUG_DIR}/libraryd.lib)
WIN_RELEASE_LIB(${LIBRARY}/${OS}/${RELEASE_DIR}/library.lib)
APPLE_DEBUG_LIB(${LIBRARY}/${OS}/${DEBUG_DIR}/libraryd.a)
APPLE_RELEASE_LIB(${LIBRARY}/${OS}/${RELEASE_DIR}/library.a)
LINUX_DEBUG_LIB(${LIBRARY}/${OS}/${DEBUG_DIR}/libraryd.a)
LINUX_RELEASE_LIB(${LIBRARY}/${OS}/${RELEASE_DIR}/library.a)
RASPBERRY_DEBUG_LIB(${LIBRARY}/${OS}/${DEBUG_DIR}/libraryd.a)
RASPBERRY_RELEASE_LIB(${LIBRARY}/${OS}/${RELEASE_DIR}/library.a)
ANDROID_DEBUG_LIB(${LIBRARY}/${OS}/${DEBUG_DIR}/libraryd.a)
ANDROID_RELEASE_LIB(${LIBRARY}/${OS}/${RELEASE_DIR}/library.a)


### COMPILE ###
WIN_PATH(${LIBRARY}/${OS})
WIN32_COMMAND(${DKCMAKE_WIN32} -DLIBRARY_STATIC ${LIBRARY})
WIN64_COMMAND(${DKCMAKE_WIN64} -DLIBRARY_STATIC ${LIBRARY})
WIN_VS(${LIBRARY_NAME} library.sln library_static)


MAC_PATH(${LIBRARY}/${OS})
MAC32_COMMAND(${DKCMAKE_MAC32} -DLIBRARY_STATIC ${LIBRARY})
MAC64_COMMAND(${DKCMAKE_MAC64} -DLIBRARY_STATIC ${LIBRARY})
MAC_XCODE(${LIBRARY_NAME} library_static)


IOS_PATH(${LIBRARY}/${OS})
IOS32_COMMAND(${DKCMAKE_IOS32} -DLIBRARY_STATIC ${LIBRARY})
IOS64_COMMAND(${DKCMAKE_IOS64} -DLIBRARY_STATIC ${LIBRARY})
IOS_XCODE(${LIBRARY_NAME} library_static)


IOSSIM_PATH(${LIBRARY}/${OS})
IOSSIM32_COMMAND(${DKCMAKE_IOSSIM32} -DLIBRARY_STATIC ${LIBRARY})
IOSSIM64_COMMAND(${DKCMAKE_IOSSIM64} -DLIBRARY_STATIC ${LIBRARY})
IOSSIM_XCODE(${LIBRARY_NAME} library_static)


LINUX_DEBUG_PATH(${LIBRARY}/${OS}/${DEBUG_DIR})
LINUX_DEBUG_COMMAND(${DKCMAKE_LINUX_DEBUG} -DLIBRARY_STATIC ${LIBRARY})
LINUX_DEBUG_COMMAND(make library-static)

LINUX_RELEASE_PATH(${LIBRARY}/${OS}/${RELEASE_DIR})
LINUX_RELEASE_COMMAND(${DKCMAKE_LINUX_RELEASE} -DLIBRARY_STATIC ${LIBRARY})
LINUX_RELEASE_COMMAND(make library-static)


RASPBERRY_DEBUG_PATH(${LIBRARY}/${OS}/${DEBUG_DIR})
RASPBERRY_DEBUG_COMMAND(${DKCMAKE_RASPBERRY_DEBUG} -DLIBRARY_STATIC ${LIBRARY})
