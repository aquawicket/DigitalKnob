### DEPENDS ###
#DKDEPEND(libname)


### VERSION ###
DKSET(BOXER_VERSION master)
DKSET(BOXER_NAME boxer-${BOXER_VERSION})
DKSET(BOXER_DL https://github.com/aaronmjacobs/Boxer/archive/refs/heads/${BOXER_VERSION}.zip)
DKSET(BOXER ${3RDPARTY}/${BOXER_NAME})


### INSTALL ###
DKINSTALL(${BOXER_DL} boxer ${BOXER})


### LINK ###
DKINCLUDE(${BOXER}/include)
DKINCLUDE(${BOXER}/${OS})
WIN_DEBUG_LIB(${BOXER}/${OS}/${DEBUG_DIR}/Boxer.lib)
WIN_RELEASE_LIB(${BOXER}/${OS}/${RELEASE_DIR}/Boxer.lib)
APPLE_DEBUG_LIB(${BOXER}/${OS}/${DEBUG_DIR}/libBoxer.a)
APPLE_RELEASE_LIB(${BOXER}/${OS}/${RELEASE_DIR}/libBoxer.a)
LINUX_DEBUG_LIB(${BOXER}/${OS}/${DEBUG_DIR}/libBoxer.a)
LINUX_RELEASE_LIB(${BOXER}/${OS}/${RELEASE_DIR}/libBoxer.a)
RASPBERRY_DEBUG_LIB(${BOXER}/${OS}/${DEBUG_DIR}/libBoxer.a)
RASPBERRY_RELEASE_LIB(${BOXER}/${OS}/${RELEASE_DIR}/libBoxer.a)
ANDROID_DEBUG_LIB(${BOXER}/${OS}/${DEBUG_DIR}/libBoxer.a)
ANDROID_RELEASE_LIB(${BOXER}/${OS}/${RELEASE_DIR}/libBoxer.a)


### COMPILE ###
WIN_PATH(${BOXER}/${OS})
WIN32_COMMAND(${DKCMAKE_WIN32} ${BOXER})
WIN64_COMMAND(${DKCMAKE_WIN64} ${BOXER})
WIN_VS(${BOXER_NAME} boxer.sln boxer)


MAC_PATH(${BOXER}/${OS})
MAC32_COMMAND(${DKCMAKE_MAC32} ${BOXER})
MAC64_COMMAND(${DKCMAKE_MAC64} ${BOXER})
MAC_XCODE(${BOXER_NAME} boxer)


IOS_PATH(${BOXER}/${OS})
IOS32_COMMAND(${DKCMAKE_IOS32} ${BOXER})
IOS64_COMMAND(${DKCMAKE_IOS64} ${BOXER})
IOS_XCODE(${BOXER_NAME} boxer)


IOSSIM_PATH(${BOXER}/${OS})
IOSSIM32_COMMAND(${DKCMAKE_IOSSIM32} ${BOXER})
IOSSIM64_COMMAND(${DKCMAKE_IOSSIM64} ${BOXER})
IOSSIM_XCODE(${BOXER_NAME} boxer)


LINUX_DEBUG_PATH(${BOXER}/${OS}/${DEBUG_DIR})
LINUX_DEBUG_COMMAND(${DKCMAKE_LINUX_DEBUG} ${BOXER})
LINUX_DEBUG_COMMAND(make boxer)

LINUX_RELEASE_PATH(${BOXER}/${OS}/${RELEASE_DIR})
LINUX_RELEASE_COMMAND(${DKCMAKE_LINUX_RELEASE} ${BOXER})
LINUX_RELEASE_COMMAND(make boxer)


RASPBERRY_DEBUG_PATH(${BOXER}/${OS}/${DEBUG_DIR})
RASPBERRY_DEBUG_COMMAND(${DKCMAKE_RASPBERRY_DEBUG} ${BOXER})
RASPBERRY_DEBUG_COMMAND(make boxer)

RASPBERRY_RELEASE_PATH(${BOXER}/${OS}/${RELEASE_DIR})
RASPBERRY_RELEASE_COMMAND(${DKCMAKE_RASPBERRY_RELEASE} ${BOXER})
RASPBERRY_RELEASE_COMMAND(make boxer)


