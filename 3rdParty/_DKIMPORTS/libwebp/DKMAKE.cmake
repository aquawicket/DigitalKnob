## http://www.libwebp.org/pub/webp/libwebp.html

### VERSION ###
DKSET(WEBP_MAJOR_VERSION 1)
DKSET(WEBP_MINOR_VERSION 0)
DKSET(WEBP_BUILD_VERSION 3)
DKSET(WEBP_VERSION libwebp-${WEBP_MAJOR_VERSION}.${WEBP_MINOR_VERSION}.${WEBP_BUILD_VERSION})
DKSET(WEBP ${3RDPARTY}/${WEBP_VERSION})


### INSTALL ###
## https://sourceforge.net/projects/libwebp/files/libwebp17/1.7.0-oldbetas/libwebp-1.7.0beta34.tar.gz
DKINSTALL(https://sourceforge.net/projects/libwebp/files/libwebp${WEBP_MAJOR_VERSION}${WEBP_MINOR_VERSION}/${WEBP_MAJOR_VERSION}.${WEBP_MINOR_VERSION}.0-oldbetas/${WEBP_VERSION}.tar.gz libwebp ${WEBP_VERSION})


### DKPLUGINS LINK ###
DKINCLUDE(${WEBP})
DKINCLUDE(${WEBP}/${OS})
DKINCLUDE(${WEBP}/${OS}/${RELEASE_DIR})
ANDROID_INCLUDE(${WEBP}/${OS}/$(BUILD_TYPE)/jni)
WIN_DEBUG_LIB(${WEBP}/${OS}/${DEBUG_DIR}/libwebp${WEBP_MAJOR_VERSION}${WEBP_MINOR_VERSION}_staticd.lib)
WIN_RELEASE_LIB(${WEBP}/${OS}/${RELEASE_DIR}/libwebp${WEBP_MAJOR_VERSION}${WEBP_MINOR_VERSION}_static.lib)
APPLE_DEBUG_LIB(${WEBP}/${OS}/${DEBUG_DIR}/libwebp${WEBP_MAJOR_VERSION}${WEBP_MINOR_VERSION}d.a)
APPLE_RELEASE_LIB(${WEBP}/${OS}/${RELEASE_DIR}/libwebp${WEBP_MAJOR_VERSION}${WEBP_MINOR_VERSION}.a)
LINUX_DEBUG_LIB(${WEBP}/${OS}/${DEBUG_DIR}/libwebp${WEBP_MAJOR_VERSION}${WEBP_MINOR_VERSION}d.a)
LINUX_RELEASE_LIB(${WEBP}/${OS}/${RELEASE_DIR}/libwebp${WEBP_MAJOR_VERSION}${WEBP_MINOR_VERSION}.a)
RASPBERRY_DEBUG_LIB(${WEBP}/${OS}/${DEBUG_DIR}/libwebp${WEBP_MAJOR_VERSION}${WEBP_MINOR_VERSION}d.a)
RASPBERRY_RELEASE_LIB(${WEBP}/${OS}/${RELEASE_DIR}/libwebp${WEBP_MAJOR_VERSION}${WEBP_MINOR_VERSION}.a)
