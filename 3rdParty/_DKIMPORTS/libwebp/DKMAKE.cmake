DKSET(WEBP_APPLE -DWEBP_INCLUDE_DIR=${WEBP} -DWEBP_INCLUDE_DIR2=${WEBP}/${OS} -DWEBP_LIBRARY_DEBUG=${WEBP}/${OS}/${DEBUG_DIR}/libwebp${WEBP_MAJOR_VERSION}${WEBP_MINOR_VERSION}d.a -DWEBP_LIBRARY_RELEASE=${WEBP}/${OS}/${RELEASE_DIR}/libwebp${WEBP_MAJOR_VERSION}${WEBP_MINOR_VERSION}.a)
DKSET(WEBP_LINUX -DWEBP_INCLUDE_DIR=${WEBP} -DWEBP_INCLUDE_DIR2=${WEBP}/${OS}/${RELEASE_DIR} -DWEBP_LIBRARY_DEBUG=${WEBP}/${OS}/${DEBUG_DIR}/libwebp${WEBP_MAJOR_VERSION}${WEBP_MINOR_VERSION}d.a -DWEBP_LIBRARY_RELEASE=${WEBP}/${OS}/${RELEASE_DIR}/libwebp${WEBP_MAJOR_VERSION}${WEBP_MINOR_VERSION}.a)
DKSET(WEBP_RASPBERRY -DWEBP_INCLUDE_DIR=${WEBP} -DWEBP_INCLUDE_DIR2=${WEBP}/${OS} -DWEBP_LIBRARY_DEBUG=${WEBP}/${OS}/${DEBUG_DIR}/libwebp${WEBP_MAJOR_VERSION}${WEBP_MINOR_VERSION}d.a -DWEBP_LIBRARY_RELEASE=${WEBP}/${OS}/${RELEASE_DIR}/libwebp${WEBP_MAJOR_VERSION}${WEBP_MINOR_VERSION}.a)
DKSET(WEBP_ANDROID -DWEBP_INCLUDE_DIR=${WEBP} -DWEBP_INCLUDE_DIR2=${WEBP}/${OS} -DWEBP_LIBRARY_DEBUG=${WEBP}/${OS}/${DEBUG_DIR}/libwebp${WEBP_MAJOR_VERSION}${WEBP_MINOR_VERSION}d.a -DWEBP_LIBRARY_RELEASE=${WEBP}/${OS}/${RELEASE_DIR}/libwebp${WEBP_MAJOR_VERSION}${WEBP_MINOR_VERSION}.a)
	

### COMPILE ###
WIN_PATH(${WEBP}/${OS})
WIN32_COMMAND(${DKCMAKE_WIN32} -DWEBP_SHARED=OFF -DWEBP_TESTS=OFF ${ZLIB_WIN} ${WEBP})
