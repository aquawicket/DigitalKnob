## https://www.libsdl.org/projects/SDL_mixer/release/SDL2_mixer-2.0.4.zip

### DEPENDS ###
DKDEPEND(smpeg2)
DKDEPEND(libogg)
DKDEPEND(libvorbis)



### VERSION ###
DKSET(SDL2MIXER_VERSION 2.0.1)
DKSET(SDL2MIXER_NAME SDL2_mixer-${SDL2MIXER_VERSION})
DKSET(SDL2MIXER_DL https://www.libsdl.org/projects/SDL_mixer/release/SDL2_mixer-${SDL2MIXER_VERSION}.zip)



### INSTALL ###
DKSET(SDL2MIXER ${3RDPARTY}/SDL2_mixer-${SDL2MIXER_VERSION})
DKINSTALL(${SDL2MIXER_DL} sdl2_mixer ${SDL2MIXER})



### DKPLUGINS LINK ###
DKINCLUDE(${SDL2MIXER})
WIN_DEBUG_DKLIB(${SDL2MIXER}/${OS}/lib/${DEBUG_DIR}/SDL_mixer.lib)
WIN_RELEASE_DKLIB(${SDL2MIXER}/${OS}/lib/${RELEASE_DIR}/SDL_mixer.lib)
APPLE_DEBUG_DKLIB(${SDL2MIXER}/${OS}/lib/${DEBUG_DIR}/SDL_mixer.a)
APPLE_RELEASE_DKLIB(${SDL2MIXER}/${OS}/lib/${RELEASE_DIR}/SDL_mixer.a)
LINUX_DEBUG_DKLIB(${SDL2MIXER}/${OS}/${DEBUG_DIR}/lib/SDL_mixer.a)
LINUX_RELEASE_DKLIB(${SDL2MIXER}/${OS}/${RELEASE_DIR}/lib/SDL_mixer.a)
RASPBERRY_DEBUG_DKLIB(${SDL2MIXER}/${OS}/${DEBUG_DIR}/lib/SDL_mixer.a)
RASPBERRY_RELEASE_DKLIB(${SDL2MIXER}/${OS}/${RELEASE_DIR}/lib/SDL_mixer.a)
ANDROID_DEBUG_DKLIB(${SDL2MIXER}/${OS}/${DEBUG_DIR}/obj/local/armeabi-v7a/libSDL2_mixer.a)
ANDROID_RELEASE_DKLIB(${SDL2MIXER}/${OS}/${RELEASE_DIR}/obj/local/armeabi-v7a/libSDL2_mixer.a)



### COMPILE ###
DKSETPATH(${SDL2MIXER}/${OS})
DKQCOMMAND(${DKCMAKE_BUILD} ${SDL2_CMAKE} ${VORBIS_CMAKE} ${OGG_CMAKE} ${SMPEG2_CMAKE} ${SDL2MIXER})



WIN_VS(${SDL2MIXER_NAME} SDLMIXER.sln SDLMIXER)
MAC_XCODE(${SDL2MIXER_NAME} SDLMIXER)
IOS_XCODE(${SDL2MIXER_NAME} SDLMIXER)
IOSSIM_XCODE(${SDL2MIXER_NAME} SDLMIXER)
LINUX_DKQCOMMAND(make SDLMIXER)
RASPBERRY_DKQCOMMAND(make SDLMIXER)
ANDROID_VS(${SDL2MIXER_NAME} SDLMIXER.sln SDLMIXER)
