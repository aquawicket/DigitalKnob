## https://github.com/ImageMagick/ImageMagick/archive/refs/tags/7.1.0-0.zip

### VERSION ###
DKSET(IMAGEMAGICK_VERSION 7.1.0-0)
DKSET(IMAGEMAGICK_NAME ImageMagick-${IMAGEMAGICK_VERSION})
DKSET(IMAGEMAGICK_ROOT ${3RDPARTY}/${IMAGEMAGICK_NAME})


### INSTALL ###
DKINSTALL(https://github.com/ImageMagick/ImageMagick/archive/refs/tags/${IMAGEMAGICK_VERSION}.zip ImageMagick ${IMAGEMAGICK})


### LINK ###
WIN32_INCLUDE(${IMAGEMAGICK_ROOT}/${OS})
WIN64_INCLUDE(${IMAGEMAGICK_ROOT}/${OS})
WIN_DEBUG_LIB(${IMAGEMAGICK_ROOT}/${OS}/${DEBUG_DIR}/imagemagickd.lib)
WIN_RELEASE_LIB(${IMAGEMAGICK_ROOT}/${OS}/${RELEASE_DIR}/imagemagick.lib)
APPLE_DEBUG_LIB(${IMAGEMAGICK_ROOT}/${OS}/${DEBUG_DIR}/libimagemagick.a)
APPLE_RELEASE_LIB(${IMAGEMAGICK_ROOT}/${OS}/${RELEASE_DIR}/libimagemagick.a)
LINUX_DEBUG_LIB(${IMAGEMAGICK_ROOT}/${OS}/${DEBUG_DIR}/libimagemagick.a)
LINUX_RELEASE_LIB(${IMAGEMAGICK_ROOT}/${OS}/${RELEASE_DIR}/libimagemagick.a)
ANDROID_DEBUG_LIB(${IMAGEMAGICK_ROOT}/${OS}/${DEBUG_DIR}/obj/local/armeabi-v7a/libimagemagick.a)
ANDROID_RELEASE_LIB(${IMAGEMAGICK_ROOT}/${OS}/${RELEASE_DIR}/obj/local/armeabi-v7a/libimagemagick.a)


### COMPILE ###
WIN32_PATH(${IMAGEMAGICK_ROOT}/${OS}/${DEBUG_DIR})
WIN32_BASH("#!/bin/bash\;
cd /${IMAGEMAGICK_ROOT}/${OS}/${DEBUG_DIR}\;
export PATH=/${MINGW32}/bin:$PATH\;
export PATH=/${MSYS}/bin:$PATH\;
../../configure --disable-shared --enable-static\;
make\;
exit\;")

WIN_PATH(${IMAGEMAGICK_ROOT}/${OS})
WIN32_COMMAND(${DKCMAKE_WIN32} ${IMAGEMAGICK_ROOT})
WIN64_COMMAND(${DKCMAKE_WIN64} ${IMAGEMAGICK_ROOT})
WIN_VS(ImageMagick-${IMAGEMAGICK_VERSION} imagemagick.sln imagemagick)


MAC_PATH(${IMAGEMAGICK_ROOT}/${OS})
MAC64_COMMAND(${DKCMAKE_MAC64} ${IMAGEMAGICK_ROOT})
MAC_XCODE(ImageMagick-${IMAGEMAGICK_VERSION} imagemagick)


IOS_PATH(${IMAGEMAGICK_ROOT}/${OS})
IOS64_COMMAND(${DKCMAKE_IOS64} ${IMAGEMAGICK_ROOT})
IOS_XCODE(ImageMagick-${IMAGEMAGICK_VERSION} imagemagick)


IOSSIM_PATH(${IMAGEMAGICK_ROOT}/${OS})
IOSSIM_COMMAND(${DKCMAKE_IOSSIM64} ${IMAGEMAGICK_ROOT})
IOSSIM_XCODE(ImageMagick-${IMAGEMAGICK_VERSION} imagemagick)


LINUX_DEBUG_PATH(${IMAGEMAGICK_ROOT}/${OS}/${DEBUG_DIR})
LINUX_DEBUG_COMMAND(${DKCMAKE_LINUX_DEBUG} ${IMAGEMAGICK_ROOT})
LINUX_DEBUG_COMMAND(make imagemagick)

LINUX_RELEASE_PATH(${IMAGEMAGICK_ROOT}/${OS}/${RELEASE_DIR})
LINUX_RELEASE_COMMAND(${DKCMAKE_LINUX_RELEASE} ${IMAGEMAGICK_ROOT})
LINUX_RELEASE_COMMAND(make imagemagick)


ANDROID_NDK(${IMAGEMAGICK_NAME})
