WIN_DKSETPATH(${VNCSERVER}/${OS})
WIN32_DKQCOMMAND(${DKCMAKE_BUILD} ${OPENSSL_WIN} ${PNG_WIN} -DWITH_JPEG=ON ${JPEG_WIN} ${ZLIB_CMAKE} ${VNCSERVER})
WIN64_DKQCOMMAND(${DKCMAKE_BUILD} ${OPENSSL_WIN} ${PNG_WIN} -DWITH_JPEG=ON ${JPEG_WIN} ${ZLIB_CMAKE} ${VNCSERVER})
WIN_VS(${VNCSERVER_NAME} LibVNCServer.sln vncserver)
WIN_VS(${VNCSERVER_NAME} LibVNCServer.sln vncclient)


MAC_DKSETPATH(${VNCSERVER}/${OS})
