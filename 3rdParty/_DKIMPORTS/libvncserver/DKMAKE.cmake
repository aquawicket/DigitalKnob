# https://github.com/LibVNC/libvncserver.git


### DEPEND ###
dk_depend(libjpeg-turbo)
dk_depend(libpng)
dk_depend(libsystemd-dev)
dk_depend(openssl)
dk_depend(zlib)


### IMPORT ###
dk_import(https://github.com/LibVNC/libvncserver.git)


### LINK ###
dk_include					(${LIBVNCSERVER})
dk_include					(${LIBVNCSERVER}/examples)
dk_include					(${LIBVNCSERVER}/${OS})
LINUX_DEBUG_dk_include		(${LIBVNCSERVER}/${OS}/${DEBUG_DIR})
LINUX_RELEASE_dk_include	(${LIBVNCSERVER}/${OS}/${RELEASE_DIR})
RASPBERRY_DEBUG_dk_include	(${LIBVNCSERVER}/${OS}/${DEBUG_DIR})
RASPBERRY_RELEASE_dk_include(${LIBVNCSERVER}/${OS}/${RELEASE_DIR})

# vncserver
WIN_dk_libDebug				(${LIBVNCSERVER}/${OS}/${DEBUG_DIR}/vncserver.lib)
WIN_dk_libRelease			(${LIBVNCSERVER}/${OS}/${RELEASE_DIR}/vncserver.lib)
UNIX_dk_libDebug			(${LIBVNCSERVER}/${OS}/${DEBUG_DIR}/libvncserver.a)
UNIX_dk_libRelease			(${LIBVNCSERVER}/${OS}/${RELEASE_DIR}/libvncserver.a)

# vncclient
WIN_dk_libDebug				(${LIBVNCSERVER}/${OS}/${DEBUG_DIR}/vncclient.lib)
WIN_dk_libRelease			(${LIBVNCSERVER}/${OS}/${RELEASE_DIR}/vncclient.lib)
UNIX_dk_libDebug			(${LIBVNCSERVER}/${OS}/${DEBUG_DIR}/libvncclient.a)
UNIX_dk_libRelease			(${LIBVNCSERVER}/${OS}/${RELEASE_DIR}/libvncclient.a)



### 3RDPARTY LINK ###
WIN_dk_set	(LIBVNCSERVER_CMAKE "-DCMAKE_C_FLAGS=/I${LIBVNCSERVER}" "-DCMAKE_CXX_FLAGS=/I${LIBVNCSERVER}" -DLIBVNCSERVER_INCLUDE_DIR=${LIBVNCSERVER} -DLIBVNCSERVER_LIBRARY=${LIBVNCSERVER}/${OS}/${RELEASE_DIR}/vncserver.lib -DLIBVNCCLIENT_LIBRARY=${LIBVNCSERVER}/${OS}/${RELEASE_DIR}/vncclient.lib)
UNIX_dk_set	(LIBVNCSERVER_CMAKE "-DCMAKE_C_FLAGS=-I${LIBVNCSERVER}" "-DCMAKE_CXX_FLAGS=-I${LIBVNCSERVER}" -DLIBVNCSERVER_INCLUDE_DIR=${LIBVNCSERVER} -DLIBVNCSERVER_LIBRARY=${LIBVNCSERVER}/${OS}/${RELEASE_DIR}/libvncserver.a -DLIBVNCCLIENT_LIBRARY=${LIBVNCSERVER}/${OS}/${RELEASE_DIR}/libvncclient.a)


### GENERATE ###
dk_setPath							(${LIBVNCSERVER}/${BUILD_DIR})
WIN_dk_queueCommand					(${DKCMAKE_BUILD} "-DCMAKE_C_FLAGS=/I${LIBVNCSERVER}" ${LIBPNG_CMAKE} ${OPENSSL_CMAKE} ${ZLIB_CMAKE} ${LIBJPEG-TURBO_CMAKE} -DWITH_JPEG=ON ${LIBVNCSERVER})
APPLE_dk_queueCommand				(${DKCMAKE_BUILD} "-DCMAKE_C_FLAGS=-I${LIBVNCSERVER}" ${LIBPNG_CMAKE} ${OPENSSL_CMAKE} ${ZLIB_CMAKE} ${LIBJPEG-TURBO_CMAKE} -DWITH_JPEG=ON ${LIBVNCSERVER})
LINUX_DEBUG_dk_queueCommand			(${DKCMAKE_BUILD} "-DCMAKE_C_FLAGS=-I${LIBVNCSERVER} -I${LIBVNCSERVER}/${OS}/${DEBUG_DIR}" ${LIBPNG_CMAKE} ${OPENSSL_CMAKE} ${ZLIB_CMAKE} ${LIBJPEG-TURBO_CMAKE} -DWITH_JPEG=ON ${LIBVNCSERVER})
LINUX_RELEASE_dk_queueCommand		(${DKCMAKE_BUILD} "-DCMAKE_C_FLAGS=-I${LIBVNCSERVER} -I${LIBVNCSERVER}/${OS}/${RELEASE_DIR}" ${LIBPNG_CMAKE} ${OPENSSL_CMAKE} ${ZLIB_CMAKE} ${LIBJPEG-TURBO_CMAKE} -DWITH_JPEG=ON ${LIBVNCSERVER})
RASPBERRY_DEBUG_dk_queueCommand		(${DKCMAKE_BUILD} "-DCMAKE_C_FLAGS=-I${LIBVNCSERVER} -I${LIBVNCSERVER}/${OS}/${DEBUG_DIR}" ${LIBPNG_CMAKE} ${OPENSSL_CMAKE} ${ZLIB_CMAKE} ${LIBJPEG-TURBO_CMAKE} -DWITH_JPEG=ON ${LIBVNCSERVER})
RASPBERRY_RELEASE_dk_queueCommand	(${DKCMAKE_BUILD} "-DCMAKE_C_FLAGS=-I${LIBVNCSERVER} -I${LIBVNCSERVER}/${OS}/${RELEASE_DIR}" ${LIBPNG_CMAKE} ${OPENSSL_CMAKE} ${ZLIB_CMAKE} ${LIBJPEG-TURBO_CMAKE} -DWITH_JPEG=ON ${LIBVNCSERVER})
ANDROID_dk_queueCommand				(${DKCMAKE_BUILD} "-DCMAKE_C_FLAGS=-I${LIBVNCSERVER}" ${LIBPNG_CMAKE} ${OPENSSL_CMAKE} ${ZLIB_CMAKE} ${LIBJPEG-TURBO_CMAKE} -DWITH_JPEG=ON ${LIBVNCSERVER})


### COMPILE ###
dk_build(${LIBVNCSERVER_FOLDER} vncserver)
dk_build(${LIBVNCSERVER_FOLDER} vncclient)
