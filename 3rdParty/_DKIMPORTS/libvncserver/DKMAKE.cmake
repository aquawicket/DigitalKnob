# https://github.com/LibVNC/libvncserver/archive/refs/heads/master.zip

### DEPENDS ###
DKDEPEND(zlib)
DKDEPEND(libpng)
IF(ANDROID)
	DKDEPEND(jpeg)
ELSE()
	DKDEPEND(libjpeg-turbo)
ENDIF()
DKDEPEND(openssl)
IF(LINUX)
	DKDEPEND(libsystemd-dev)
ENDIF()



### VERSION ###
DKSET(VNCSERVER_VERSION master)
DKSET(VNCSERVER_NAME libvncserver-${VNCSERVER_VERSION})
DKSET(VNCSERVER_DL https://github.com/LibVNC/libvncserver/archive/refs/heads/${VNCSERVER_VERSION}.zip)
DKSET(VNCSERVER ${3RDPARTY}/${VNCSERVER_NAME})



### INSTALL ###
DKINSTALL(${VNCSERVER_DL} libvncserver ${VNCSERVER})



### LINK ###
DKINCLUDE(${VNCSERVER})
DKINCLUDE(${VNCSERVER}/examples)
DKINCLUDE(${VNCSERVER}/${OS})
DKINCLUDE(${VNCSERVER}/${OS}/${RELEASE_DIR})
WIN_DEBUG_DKLIB(${VNCSERVER}/${OS}/${DEBUG_DIR}/vncserver.lib)
WIN_RELEASE_DKLIB(${VNCSERVER}/${OS}/${RELEASE_DIR}/vncserver.lib)
WIN_DEBUG_DKLIB(${VNCSERVER}/${OS}/${DEBUG_DIR}/vncclient.lib)
WIN_RELEASE_DKLIB(${VNCSERVER}/${OS}/${RELEASE_DIR}/vncclient.lib)
MAC_DEBUG_DKLIB(${VNCSERVER}/${OS}/${DEBUG_DIR}/libvncserver.a)
MAC_RELEASE_DKLIB(${VNCSERVER}/${OS}/${RELEASE_DIR}/libvncserver.a)
MAC_DEBUG_DKLIB(${VNCSERVER}/${OS}/${DEBUG_DIR}/libvncclient.a)
MAC_RELEASE_DKLIB(${VNCSERVER}/${OS}/${RELEASE_DIR}/libvncclient.a)
IOSSIM_DEBUG_DKLIB(${VNCSERVER}/${OS}/${DEBUG_DIR}/lib/.libs/libvncserver.a)
IOSSIM_RELEASE_DKLIB(${VNCSERVER}/${OS}/${RELEASE_DIR}/lib/.libs/libvncserver.a)
LINUX_DEBUG_DKLIB(${VNCSERVER}/${OS}/${DEBUG_DIR}/libvncserver.a)
LINUX_RELEASE_DKLIB(${VNCSERVER}/${OS}/${RELEASE_DIR}/libvncserver.a)
LINUX_DEBUG_DKLIB(${VNCSERVER}/${OS}/${DEBUG_DIR}/libvncclient.a)
LINUX_RELEASE_DKLIB(${VNCSERVER}/${OS}/${RELEASE_DIR}/libvncclient.a)
ANDROID_DEBUG_DKLIB(${VNCSERVER}/${OS}/${DEBUG_DIR}/obj/local/armeabi-v7a/libvncserver.a)
ANDROID_RELEASE_DKLIB(${VNCSERVER}/${OS}/${RELEASE_DIR}/obj/local/armeabi-v7a/libvncserver.a)


### COMPILE ###
DKSETPATH(${VNCSERVER}/${BUILD_DIR})
DKQCOMMAND(${DKCMAKE_BUILD} ${OPENSSL_CMAKE} ${PNG_CMAKE} ${ZLIB_CMAKE} -DWITH_JPEG=ON ${JPEG_CMAKE} ${VNCSERVER})


WIN_VS(${VNCSERVER_NAME} LibVNCServer.sln vncserver)
WIN_VS(${VNCSERVER_NAME} LibVNCServer.sln vncclient)

MAC_XCODE(${VNCSERVER_NAME} vncserver)
MAC_XCODE(${VNCSERVER_NAME} vncclient)

IOS_XCODE(${VNCSERVER_NAME} vncserver)
IOS_XCODE(${VNCSERVER_NAME} vncclient)

IOSSIM_XCODE(${VNCSERVER_NAME} vncserver)
IOSSIM_XCODE(${VNCSERVER_NAME} vncclient)

LINUX_DKQCOMMAND(make vncserver)
LINUX_DKQCOMMAND(make vncclient)

ANDROID_VS(${VNCSERVER_NAME} LibVNCServer.sln vncserver)
ANDROID_VS(${VNCSERVER_NAME} LibVNCServer.sln vncclient)