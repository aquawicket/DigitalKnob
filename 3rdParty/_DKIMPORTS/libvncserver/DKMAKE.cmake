IOSSIM_DKSETPATH(${VNCSERVER}/${OS})
IOSSIM64_DKQCOMMAND(${DKCMAKE_BUILD} -DWITH_JPEG=ON ${OPENSSL_APPLE} ${PNG_APPLE} ${JPEG_APPLE} ${ZLIB_CMAKE} ${VNCSERVER})
