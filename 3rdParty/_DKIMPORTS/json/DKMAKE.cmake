## https://github.com/nlohmann/json

### VERSION ###
DKSET(JSON_MAJOR_VERSION 3)
DKSET(JSON_MINOR_VERSION 9)
DKSET(JSON_BUILD_VERSION 1)
DKSET(JSON_VERSION ${JSON_MAJOR_VERSION}.${JSON_MINOR_VERSION}.${JSON_BUILD_VERSION})
DKSET(JSON ${3RDPARTY}/${JSON_VERSION})


### INSTALL ###
## https://github.com/nlohmann/json/archive/refs/tags/v3.9.1.zip
DKINSTALL(https://github.com/nlohmann/json/archive/refs/tags/v${JSON_MAJOR_VERSION}.${JSON_MINOR_VERSION}.${JSON_BUILD_VERSION}.zip json json-${JSON_VERSION})


### LINK ###
DKINCLUDE(${JSON})
DKINCLUDE(${JSON}/${OS})
DKINCLUDE(${JSON}/${OS}/${RELEASE})
WIN_DEBUG_LIB(${JSON}/${OS}/${DEBUG}/libjson_unitd.lib)
WIN_RELEASE_LIB(${JSON}/${OS}/${RELEASE}/libjson_unit.lib)
APPLE_DEBUG_LIB(${JSON}/${OS}/${DEBUG}/libJSON${JSON_MAJOR_VERSION}${JSON_MINOR_VERSION}d.a)
APPLE_RELEASE_LIB(${JSON}/${OS}/${RELEASE}/libJSON${JSON_MAJOR_VERSION}${JSON_MINOR_VERSION}.a)
LINUX_DEBUG_LIB(${JSON}/${OS}/${DEBUG}/libJSON${JSON_MAJOR_VERSION}${JSON_MINOR_VERSION}d.a)
LINUX_RELEASE_LIB(${JSON}/${OS}/${RELEASE}/libJSON${JSON_MAJOR_VERSION}${JSON_MINOR_VERSION}.a)
RASPBERRY_DEBUG_LIB(${JSON}/${OS}/${DEBUG}/libJSON${JSON_MAJOR_VERSION}${JSON_MINOR_VERSION}d.a)
RASPBERRY_RELEASE_LIB(${JSON}/${OS}/${RELEASE}/libJSON${JSON_MAJOR_VERSION}${JSON_MINOR_VERSION}.a)
ANDROID_DEBUG_LIB(${JSON}/${OS}/${DEBUG}/obj/local/armeabi-v7a/libJSON.a)
ANDROID_RELEASE_LIB(${JSON}/${OS}/${RELEASE}/obj/local/armeabi-v7a/libJSON.a)



### COMPILE ###
WIN32_COMMAND(${CMAKE_COMMAND} -G ${GENERATOR} -A Win32 "-DCMAKE_C_FLAGS=/DWIN32 /D_WINDOWS /W3 /nologo" "-DCMAKE_C_FLAGS_DEBUG=/MTd /Od /Ob0 /Zi /RTC1 /DDEBUG /D_DEBUG" "-DCMAKE_C_FLAGS_RELEASE=/MT /O2 /Ob2 /DNDEBUG" -S ${JSON} -B ${JSON}/${OS})
WIN32_VS_DEBUG(json-${JSON_VERSION} nlohmann_json.sln json_unit)
WIN32_VS_RELEASE(json-${JSON_VERSION} nlohmann_json.sln json_unit)


WIN64_COMMAND(${CMAKE_COMMAND} -G ${GENERATOR} -A x64 "-DCMAKE_C_FLAGS=/DWIN32 /D_WINDOWS /W3 /nologo" "-DCMAKE_C_FLAGS_DEBUG=/MTd /Od /Ob0 /Zi /RTC1 /DDEBUG /D_DEBUG" "-DCMAKE_C_FLAGS_RELEASE=/MT /O2 /Ob2 /DNDEBUG" -S ${JSON} -B ${JSON}/${OS})
WIN64_VS_DEBUG(json-${JSON_VERSION} nlohmann_json.sln json_unit)
WIN64_VS_RELEASE(json-${JSON_VERSION} nlohmann_json.sln json_unit)


MAC_COMMAND(${CMAKE_COMMAND} -G "Xcode" -DCMAKE_OSX_ARCHITECTURES=x86_64 -S ${JSON} -B ${JSON}/${OS})
MAC_XCODE_DEBUG(json-${JSON_VERSION} json_unit)
MAC_XCODE_RELEASE(json-${JSON_VERSION} json_unit)


IOS_COMMAND(${CMAKE_COMMAND} -G "Xcode" -DCMAKE_TOOLCHAIN_FILE=${DKCMAKE}/iOS.cmake -DIOS_PLATFORM=OS -S ${JSON} -B ${JSON}/${OS})
IOS_XCODE_DEBUG(json-${JSON_VERSION} json_unit)
IOS_XCODE_RELEASE(json-${JSON_VERSION} json_unit)


IOSSIM_COMMAND(${CMAKE_COMMAND} -G "Xcode" -DCMAKE_TOOLCHAIN_FILE=${DKCMAKE}/iOS.cmake -DIOS_PLATFORM=SIMULATOR64 -S ${JSON} -B ${JSON}/${OS})
IOSSIM_XCODE_DEBUG(json-${JSON_VERSION} json_unit)
IOSSIM_XCODE_RELEASE(json-${JSON_VERSION} json_unit)


