RASPBERRY_DEBUG_COMMAND(${CMAKE_COMMAND} -G "Unix Makefiles" -DCMAKE_BUILD_TYPE=DEBUG -S ${JSON} -B ${JSON}/${OS}/${DEBUG})
RASPBERRY_DEBUG_COMMAND(make all)
RASPBERRY_RELEASE_COMMAND(${CMAKE_COMMAND} -G "Unix Makefiles" -DCMAKE_BUILD_TYPE=RELEASE -S ${JSON} -B ${JSON}/${OS}/${RELEASE})
