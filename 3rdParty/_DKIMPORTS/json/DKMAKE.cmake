## https://github.com/nlohmann/json

### VERSION ###
DKSET(JSON_MAJOR_VERSION 3)
DKSET(JSON_MINOR_VERSION 9)
DKSET(JSON_BUILD_VERSION 1)
DKSET(JSON_VERSION ${JSON_MAJOR_VERSION}.${JSON_MINOR_VERSION}.${JSON_BUILD_VERSION})
DKSET(JSON ${3RDPARTY}/${JSON_VERSION})


### INSTALL ###
## https://github.com/nlohmann/json/archive/refs/tags/v3.9.1.zip
DKINSTALL(https://github.com/nlohmann/json/archive/refs/tags/v${JSON_MAJOR_VERSION}.${JSON_MINOR_VERSION}.${JSON_BUILD_VERSION}.zip json json-${JSON_VERSION})


### LINK ###
DKINCLUDE(${JSON})
DKINCLUDE(${JSON}/${OS})
DKINCLUDE(${JSON}/${OS}/${RELEASE_DIR})
WIN_DEBUG_LIB(${JSON}/${OS}/${DEBUG_DIR}/libjson_unitd.lib)
WIN_RELEASE_LIB(${JSON}/${OS}/${RELEASE_DIR}/libjson_unit.lib)
APPLE_DEBUG_LIB(${JSON}/${OS}/${DEBUG_DIR}/libJSON${JSON_MAJOR_VERSION}${JSON_MINOR_VERSION}d.a)
APPLE_RELEASE_LIB(${JSON}/${OS}/${RELEASE_DIR}/libJSON${JSON_MAJOR_VERSION}${JSON_MINOR_VERSION}.a)
LINUX_DEBUG_LIB(${JSON}/${OS}/${DEBUG_DIR}/libJSON${JSON_MAJOR_VERSION}${JSON_MINOR_VERSION}d.a)
LINUX_RELEASE_LIB(${JSON}/${OS}/${RELEASE_DIR}/libJSON${JSON_MAJOR_VERSION}${JSON_MINOR_VERSION}.a)
RASPBERRY_DEBUG_LIB(${JSON}/${OS}/${DEBUG_DIR}/libJSON${JSON_MAJOR_VERSION}${JSON_MINOR_VERSION}d.a)
RASPBERRY_RELEASE_LIB(${JSON}/${OS}/${RELEASE_DIR}/libJSON${JSON_MAJOR_VERSION}${JSON_MINOR_VERSION}.a)
ANDROID_DEBUG_LIB(${JSON}/${OS}/${DEBUG_DIR}/obj/local/armeabi-v7a/libJSON.a)
ANDROID_RELEASE_LIB(${JSON}/${OS}/${RELEASE_DIR}/obj/local/armeabi-v7a/libJSON.a)



### COMPILE ###
WIN_PATH(${JSON}/${OS})
WIN32_COMMAND(${CMAKE_COMMAND} -G ${GENERATOR} -A Win32 "-DCMAKE_C_FLAGS=/DWIN32 /D_WINDOWS /W3 /nologo" "-DCMAKE_C_FLAGS_DEBUG=/MTd /Od /Ob0 /Zi /RTC1 /DDEBUG /D_DEBUG" "-DCMAKE_C_FLAGS_RELEASE=/MT /O2 /Ob2 /DNDEBUG" ${JSON})
WIN64_COMMAND(${CMAKE_COMMAND} -G ${GENERATOR} -A x64 "-DCMAKE_C_FLAGS=/DWIN32 /D_WINDOWS /W3 /nologo" "-DCMAKE_C_FLAGS_DEBUG=/MTd /Od /Ob0 /Zi /RTC1 /DDEBUG /D_DEBUG" "-DCMAKE_C_FLAGS_RELEASE=/MT /O2 /Ob2 /DNDEBUG" ${JSON})
WIN_VS(json-${JSON_VERSION} nlohmann_json.sln json_unit)


MAC_PATH(${JSON}/${OS})
MAC_COMMAND(${CMAKE_COMMAND} -G "Xcode" -DCMAKE_OSX_ARCHITECTURES=x86_64 ${JSON})
MAC_XCODE_DEBUG(json-${JSON_VERSION} json_unit)
MAC_XCODE_RELEASE(json-${JSON_VERSION} json_unit)


IOS_PATH(${JSON}/${OS})
IOS_COMMAND(${CMAKE_COMMAND} -G "Xcode" -DCMAKE_TOOLCHAIN_FILE=${DKCMAKE}/iOS.cmake -DIOS_PLATFORM=OS ${JSON})
IOS_XCODE_DEBUG(json-${JSON_VERSION} json_unit)
IOS_XCODE_RELEASE(json-${JSON_VERSION} json_unit)


IOSSIM_PATH(${JSON}/${OS})
IOSSIM_COMMAND(${CMAKE_COMMAND} -G "Xcode" -DCMAKE_TOOLCHAIN_FILE=${DKCMAKE}/iOS.cmake -DIOS_PLATFORM=SIMULATOR64 ${JSON})
IOSSIM_XCODE_DEBUG(json-${JSON_VERSION} json_unit)
IOSSIM_XCODE_RELEASE(json-${JSON_VERSION} json_unit)


LINUX_DEBUG_PATH(${JSON}/${OS}/${DEBUG_DIR})
LINUX_DEBUG_COMMAND(${CMAKE_COMMAND} -G "Unix Makefiles" -DCMAKE_BUILD_TYPE=DEBUG ${JSON})
LINUX_DEBUG_COMMAND(make all)

LINUX_RELEASE_PATH(${JSON}/${OS}/${RELEASE_DIR})
LINUX_RELEASE_COMMAND(${CMAKE_COMMAND} -G "Unix Makefiles" -DCMAKE_BUILD_TYPE=RELEASE ${JSON})
LINUX_RELEASE_COMMAND(make all)


RASPBERRY_DEBUG_PATH(${JSON}/${OS}/${DEBUG_DIR})
RASPBERRY_DEBUG_COMMAND(${CMAKE_COMMAND} -G "Unix Makefiles" -DCMAKE_BUILD_TYPE=DEBUG ${JSON})
RASPBERRY_DEBUG_COMMAND(make all)

RASPBERRY_RELEASE_PATH(${JSON}/${OS}/${RELEASE_DIR})
RASPBERRY_RELEASE_COMMAND(${CMAKE_COMMAND} -G "Unix Makefiles" -DCMAKE_BUILD_TYPE=RELEASE ${JSON})
RASPBERRY_RELEASE_COMMAND(make all)


ANDROID_NDK_DEBUG(json-${JSON_VERSION})
ANDROID_NDK_RELEASE(json-${JSON_VERSION})
