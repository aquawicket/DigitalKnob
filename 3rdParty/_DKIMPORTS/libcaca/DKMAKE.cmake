ANDROID_PATH(${CACA}/${OS})
ANDROID32_COMMAND(${DKCMAKE_ANDROID32} ${CACA})
ANDROID64_COMMAND(${DKCMAKE_ANDROID64} ${CACA})
ANDROID_VS(${CACA_NAME} libcaca.sln libcaca)
