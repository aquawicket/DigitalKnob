APPLE_DEBUG_LIB(${ICONV}/${OS}/${DEBUG_DIR}/libcharset.a)
APPLE_RELEASE_LIB(${ICONV}/${OS}/${RELEASE_DIR}/libcharset.a)
LINUX_DEBUG_LIB(${ICONV}/${OS}/${DEBUG_DIR}/libiconv.a)
LINUX_RELEASE_LIB(${ICONV}/${OS}/${RELEASE_DIR}/libiconv.a)
LINUX_DEBUG_LIB(${ICONV}/${OS}/${DEBUG_DIR}/libcharset.a)
LINUX_RELEASE_LIB(${ICONV}/${OS}/${RELEASE_DIR}/libcharset.a)
RASPBERRY_DEBUG_LIB(${ICONV}/${OS}/${DEBUG_DIR}/libiconv.a)
RASPBERRY_RELEASE_LIB(${ICONV}/${OS}/${RELEASE_DIR}/libiconv.a)
RASPBERRY_DEBUG_LIB(${ICONV}/${OS}/${DEBUG_DIR}/libcharset.a)
RASPBERRY_RELEASE_LIB(${ICONV}/${OS}/${RELEASE_DIR}/libcharset.a)
ANDROID_DEBUG_LIB(${ICONV}/${OS}/${DEBUG_DIR}/libiconv.a)
ANDROID_RELEASE_LIB(${ICONV}/${OS}/${RELEASE_DIR}/libiconv.a)
ANDROID_DEBUG_LIB(${ICONV}/${OS}/${DEBUG_DIR}/libcharset.a)
ANDROID_RELEASE_LIB(${ICONV}/${OS}/${RELEASE_DIR}/libcharset.a)


DKSET(ICONV_WIN -DICONV_DIR=${ICONV} -DICONV_LIBRARIES=${ICONV}/${OS}/${RELEASE_DIR} -DICONV_INCLUDE_DIR=${ICONV}/include)
DKSET(ICONV_APPLE "-DCMAKE_C_FLAGS=-I${ICONV}/include" -DICONV_DIR=${ICONV} -DICONV_LIBRARIES=${ICONV}/${OS}/${RELEASE_DIR} -DICONV_INCLUDE_DIR=${ICONV}/include)
DKSET(ICONV_LINUX -DICONV_DIR=${ICONV} -DICONV_LIBRARIES=${ICONV}/${OS}/${RELEASE_DIR} -DICONV_INCLUDE_DIR=${ICONV}/include)
DKSET(ICONV_RASPBERRY -DICONV_DIR=${ICONV} -DICONV_LIBRARIES=${ICONV}/${OS}/${RELEASE_DIR} -DICONV_INCLUDE_DIR=${ICONV}/include)
DKSET(ICONV_ANDROID -DICONV_DIR=${ICONV} -DICONV_LIBRARIES=${ICONV}/${OS}/${RELEASE_DIR} -DICONV_INCLUDE_DIR=${ICONV}/include)


### COMPILE ###
WIN_PATH(${ICONV}/${OS})
WIN32_COMMAND(${DKCMAKE_WIN32} ${ICONV})
WIN64_COMMAND(${DKCMAKE_WIN64} ${ICONV})
WIN_VS(${ICONV_NAME} libiconv.sln iconv)


MAC_PATH(${ICONV}/${OS})
MAC32_COMMAND(${DKCMAKE_MAC32} ${ICONV})
MAC64_COMMAND(${DKCMAKE_MAC64} ${ICONV})
