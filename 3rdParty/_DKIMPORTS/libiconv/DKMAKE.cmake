dk_set(LIBICONV ${3RDPARTY}/${LIBICONV_NAME})
dk_install(${LIBICONV_DL} libiconv ${LIBICONV} PATCH)


### LINK ###
dk_include(${LIBICONV})
dk_include(${LIBICONV}/include)
