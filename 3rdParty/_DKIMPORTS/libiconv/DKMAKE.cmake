### VERSION ###
DKSET(LIBICONV_VERSION 1.14)
DKSET(LIBICONV_NAME libiconv-${LIBICONV_VERSION})
DKSET(LIBICONV_DL https://ftp.gnu.org/gnu/libiconv/libiconv-1.14.tar.gz)
DKSET(LIBICONV ${3RDPARTY}/${LIBICONV_NAME})
DKINSTALL(${LIBICONV_DL} libiconv ${LIBICONV} PATCH)


### LINK ###
DKINCLUDE(${LIBICONV})
DKINCLUDE(${LIBICONV}/include)
DKINCLUDE(${LIBICONV}/${OS})
DKINCLUDE(${LIBICONV}/${OS}/${RELEASE_DIR})
ANDROID_DKINCLUDE(${LIBICONV}/${OS}/$(BUILD_TYPE)/jni)
WIN_DEBUG_DKLIB(${LIBICONV}/${OS}/${DEBUG_DIR}/iconv.lib)
WIN_RELEASE_DKLIB(${LIBICONV}/${OS}/${RELEASE_DIR}/iconv.lib)
WIN_DEBUG_DKLIB(${LIBICONV}/${OS}/${DEBUG_DIR}/charset.lib)
WIN_RELEASE_DKLIB(${LIBICONV}/${OS}/${RELEASE_DIR}/charset.lib)
APPLE_DEBUG_DKLIB(${LIBICONV}/${OS}/${DEBUG_DIR}/libiconv.a)
APPLE_RELEASE_DKLIB(${LIBICONV}/${OS}/${RELEASE_DIR}/libiconv.a)
APPLE_DEBUG_DKLIB(${LIBICONV}/${OS}/${DEBUG_DIR}/libcharset.a)
APPLE_RELEASE_DKLIB(${LIBICONV}/${OS}/${RELEASE_DIR}/libcharset.a)
LINUX_DEBUG_DKLIB(${LIBICONV}/${OS}/${DEBUG_DIR}/libiconv.a)
LINUX_RELEASE_DKLIB(${LIBICONV}/${OS}/${RELEASE_DIR}/libiconv.a)
LINUX_DEBUG_DKLIB(${LIBICONV}/${OS}/${DEBUG_DIR}/libcharset.a)
LINUX_RELEASE_DKLIB(${LIBICONV}/${OS}/${RELEASE_DIR}/libcharset.a)
RASPBERRY_DEBUG_DKLIB(${LIBICONV}/${OS}/${DEBUG_DIR}/libiconv.a)
RASPBERRY_RELEASE_DKLIB(${LIBICONV}/${OS}/${RELEASE_DIR}/libiconv.a)
RASPBERRY_DEBUG_DKLIB(${LIBICONV}/${OS}/${DEBUG_DIR}/libcharset.a)
RASPBERRY_RELEASE_DKLIB(${LIBICONV}/${OS}/${RELEASE_DIR}/libcharset.a)
ANDROID_DEBUG_DKLIB(${LIBICONV}/${OS}/${DEBUG_DIR}/libiconv.a)
ANDROID_RELEASE_DKLIB(${LIBICONV}/${OS}/${RELEASE_DIR}/libiconv.a)
ANDROID_DEBUG_DKLIB(${LIBICONV}/${OS}/${DEBUG_DIR}/libcharset.a)
ANDROID_RELEASE_DKLIB(${LIBICONV}/${OS}/${RELEASE_DIR}/libcharset.a)


WIN_DKSET(LIBICONV_CMAKE -DICONV_DIR=${LIBICONV} -DICONV_LIBRARIES=${LIBICONV}/${OS}/${RELEASE_DIR} -DICONV_INCLUDE_DIR=${LIBICONV}/include)
APPLE_DKSET(LIBICONV_CMAKE "-DCMAKE_C_FLAGS=-I${LIBICONV}/include" -DICONV_DIR=${LIBICONV} -DICONV_LIBRARIES=${LIBICONV}/${OS}/${RELEASE_DIR} -DICONV_INCLUDE_DIR=${LIBICONV}/include)
LINUX_DKSET(LIBICONV_CMAKE -DICONV_DIR=${LIBICONV} -DICONV_LIBRARIES=${LIBICONV}/${OS}/${RELEASE_DIR} -DICONV_INCLUDE_DIR=${LIBICONV}/include)
RASPBERRY_DKSET(LIBICONV_CMAKE -DICONV_DIR=${LIBICONV} -DICONV_LIBRARIES=${LIBICONV}/${OS}/${RELEASE_DIR} -DICONV_INCLUDE_DIR=${LIBICONV}/include)
ANDROID_DKSET(LIBICONV_CMAKE -DICONV_DIR=${LIBICONV} -DICONV_LIBRARIES=${LIBICONV}/${OS}/${RELEASE_DIR} -DICONV_INCLUDE_DIR=${LIBICONV}/include)


### COMPILE ###
DKSETPATH(${LIBICONV}/${BUILD_DIR})
DKQCOMMAND(${DKCMAKE_BUILD} ${LIBICONV})

WIN_VS(${LIBICONV_NAME} libiconv.sln iconv)
MAC_XCODE(${LIBICONV_NAME} iconv)
IOS_XCODE(${LIBICONV_NAME} iconv)
IOSSIM_XCODE(${LIBICONV_NAME} iconv)
LINUX_DKQCOMMAND(make iconv)
RASPBERRY_DKQCOMMAND(make iconv)
ANDROID_VS(${LIBICONV_NAME} libiconv.sln iconv)
