### VERSION ###
DKSET(ICONV_VERSION 1.14)
DKSET(ICONV_NAME libiconv-${ICONV_VERSION})
DKSET(ICONV_DL https://ftp.gnu.org/gnu/libiconv/${ICONV_NAME}.tar.gz)
DKSET(ICONV ${3RDPARTY}/${ICONV_NAME})


### INSTALL ###
DKINSTALL(${ICONV_DL} libiconv ${ICONV})


### LINK ###
DKINCLUDE(${ICONV})
DKINCLUDE(${ICONV}/include)
DKINCLUDE(${ICONV}/${OS})
DKINCLUDE(${ICONV}/${OS}/${RELEASE_DIR})
ANDROID_DKINCLUDE(${ICONV}/${OS}/$(BUILD_TYPE)/jni)
WIN_DEBUG_LIB(${ICONV}/${OS}/${DEBUG_DIR}/iconv.lib)
WIN_RELEASE_LIB(${ICONV}/${OS}/${RELEASE_DIR}/iconv.lib)
WIN_DEBUG_LIB(${ICONV}/${OS}/${DEBUG_DIR}/charset.lib)
WIN_RELEASE_LIB(${ICONV}/${OS}/${RELEASE_DIR}/charset.lib)
APPLE_DEBUG_LIB(${ICONV}/${OS}/${DEBUG_DIR}/libiconv.a)
APPLE_RELEASE_LIB(${ICONV}/${OS}/${RELEASE_DIR}/libiconv.a)
APPLE_DEBUG_LIB(${ICONV}/${OS}/${DEBUG_DIR}/libcharset.a)
APPLE_RELEASE_LIB(${ICONV}/${OS}/${RELEASE_DIR}/libcharset.a)
LINUX_DEBUG_LIB(${ICONV}/${OS}/${DEBUG_DIR}/libiconv.a)
LINUX_RELEASE_LIB(${ICONV}/${OS}/${RELEASE_DIR}/libiconv.a)
LINUX_DEBUG_LIB(${ICONV}/${OS}/${DEBUG_DIR}/libcharset.a)
LINUX_RELEASE_LIB(${ICONV}/${OS}/${RELEASE_DIR}/libcharset.a)
RASPBERRY_DEBUG_LIB(${ICONV}/${OS}/${DEBUG_DIR}/libiconv.a)
RASPBERRY_RELEASE_LIB(${ICONV}/${OS}/${RELEASE_DIR}/libiconv.a)
RASPBERRY_DEBUG_LIB(${ICONV}/${OS}/${DEBUG_DIR}/libcharset.a)
RASPBERRY_RELEASE_LIB(${ICONV}/${OS}/${RELEASE_DIR}/libcharset.a)
ANDROID_DEBUG_LIB(${ICONV}/${OS}/${DEBUG_DIR}/libiconv.a)
ANDROID_RELEASE_LIB(${ICONV}/${OS}/${RELEASE_DIR}/libiconv.a)
ANDROID_DEBUG_LIB(${ICONV}/${OS}/${DEBUG_DIR}/libcharset.a)
ANDROID_RELEASE_LIB(${ICONV}/${OS}/${RELEASE_DIR}/libcharset.a)


WIN_DKSET(ICONV_CMAKE -DICONV_DIR=${ICONV} -DICONV_LIBRARIES=${ICONV}/${OS}/${RELEASE_DIR} -DICONV_INCLUDE_DIR=${ICONV}/include)
APPLE_DKSET(ICONV_CMAKE "-DCMAKE_C_FLAGS=-I${ICONV}/include" -DICONV_DIR=${ICONV} -DICONV_LIBRARIES=${ICONV}/${OS}/${RELEASE_DIR} -DICONV_INCLUDE_DIR=${ICONV}/include)
LINUX_DKSET(ICONV_CMAKE -DICONV_DIR=${ICONV} -DICONV_LIBRARIES=${ICONV}/${OS}/${RELEASE_DIR} -DICONV_INCLUDE_DIR=${ICONV}/include)
RASPBERRY_DKSET(ICONV_CMAKE -DICONV_DIR=${ICONV} -DICONV_LIBRARIES=${ICONV}/${OS}/${RELEASE_DIR} -DICONV_INCLUDE_DIR=${ICONV}/include)
ANDROID_DKSET(ICONV_CMAKE -DICONV_DIR=${ICONV} -DICONV_LIBRARIES=${ICONV}/${OS}/${RELEASE_DIR} -DICONV_INCLUDE_DIR=${ICONV}/include)


### COMPILE ###
DKSETPATH(${ICONV}/${BUILD_DIR})
DKQCOMMAND(${DKCMAKE_BUILD} ${ICONV})

WIN_VS(${ICONV_NAME} libiconv.sln iconv)
MAC_XCODE(${ICONV_NAME} iconv)
IOS_XCODE(${ICONV_NAME} iconv)
IOSSIM_XCODE(${ICONV_NAME} iconv)
LINUX_DKQCOMMAND(make iconv)
RASPBERRY_DKQCOMMAND(make iconv)
ANDROID_VS(${ICONV_NAME} libiconv.sln iconv)
