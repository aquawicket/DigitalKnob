### DEPENDS ###
DKDEPEND(zlib)
DKDEPEND(libpng)
IF(ANDROID)
	DKDEPEND(jpeg)
ELSE()
	DKDEPEND(libjpeg-turbo)
ENDIF()
DKDEPEND(openssl-vs2015)


DKSET(VNCSERVER_VERSION master-win)
DKSET(VNCSERVER_NAME libvncserver-${VNCSERVER_VERSION})
DKSET(VNCSERVER ${3RDPARTY}/${VNCSERVER_NAME})


### INSTALL ###
## DKINSTALL(www.internet.com/${VNCSERVER_NAME}.zip ${VNCSERVER_NAME})



### LINK ###
DKINCLUDE(${VNCSERVER})
DKINCLUDE(${VNCSERVER}/examples)
DKINCLUDE(${VNCSERVER}/${OS})
DKINCLUDE(${VNCSERVER}/${OS}/${RELEASE_DIR})
WIN_DEBUG_LIB(${VNCSERVER}/${OS}/Debug/vncserver.lib)
WIN_RELEASE_LIB(${VNCSERVER}/${OS}/${RELEASE_DIR}/vncserver.lib)
WIN_DEBUG_LIB(${VNCSERVER}/${OS}/Debug/vncclient.lib)
WIN_RELEASE_LIB(${VNCSERVER}/${OS}/${RELEASE_DIR}/vncclient.lib)


### COMPILE ###
WIN_PATH(${VNCSERVER}/${OS})
WIN32_COMMAND(${DKCMAKE_WIN32} "-DCMAKE_C_FLAGS=/DWIN32 /D_WINDOWS /W3 /nologo /I${ZLIB}/${OS} /I${PNG}/${OS} /I${JPEG}/${OS}" -DWITH_JPEG=ON ${OPENSSL_WIN} ${PNG_WIN} ${JPEG_WIN} ${ZLIB_WIN} ${VNCSERVER})
WIN64_COMMAND(${DKCMAKE_WIN64} "-DCMAKE_C_FLAGS=/DWIN64 /D_WINDOWS /W3 /nologo /I${ZLIB}/${OS} /I${PNG}/${OS} /I${JPEG}/${OS}" -DWITH_JPEG=ON ${OPENSSL_WIN} ${PNG_WIN} ${JPEG_WIN} ${ZLIB_WIN} ${VNCSERVER})
WIN_VS(${VNCSERVER_NAME} LibVNCServer.sln vncserver)
WIN_VS(${VNCSERVER_NAME} LibVNCServer.sln vncclient)
