IOS_PATH(${TIDY}/${OS})
IOS64_COMMAND(${DKCMAKE_IOS64} ${ZLIB_APPLE} ${TIDY})
IOS_XCODE(${TIDY_NAME} tidy)


IOSSIM_PATH(${TIDY}/${OS})
IOSSIM64_COMMAND(${DKCMAKE_IOSSIM64} ${ZLIB_APPLE} ${TIDY})
IOSSIM_XCODE(${TIDY_NAME} tidy)


LINUX_DEBUG_PATH(${TIDY}/${OS}/${DEBUG_DIR})
LINUX_DEBUG_COMMAND(${DKCMAKE_LINUX_DEBUG} ${ZLIB_LINUX} ${TIDY})
LINUX_DEBUG_COMMAND(make tidy)

LINUX_RELEASE_PATH(${TIDY}/${OS}/${RELEASE_DIR})
LINUX_RELEASE_COMMAND(${DKCMAKE_LINUX_RELEASE} ${ZLIB_LINUX} ${TIDY})
LINUX_RELEASE_COMMAND(make tidy)


RASPBERRY_DEBUG_PATH(${TIDY}/${OS}/${DEBUG_DIR})
RASPBERRY_DEBUG_COMMAND(${DKCMAKE_RASPBERRY_DEBUG} ${ZLIB_RASPBERRY} ${TIDY})
