LINUX_DEBUG_LIB(${TIDY}/${OS}/${DEBUG_DIR}/libtidy.a)
LINUX_RELEASE_LIB(${TIDY}/${OS}/${RELEASE_DIR}/libtidy.a)
RASPBERRY_DEBUG_LIB(${TIDY}/${OS}/${DEBUG_DIR}/libtidy.a)
RASPBERRY_RELEASE_LIB(${TIDY}/${OS}/${RELEASE_DIR}/libtidy.a)
