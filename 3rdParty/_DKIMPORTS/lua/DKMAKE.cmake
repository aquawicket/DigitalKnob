### VERSION ###
DKSET(LUA_VERSION 5.4.3)
DKSET(LUA_NAME lua-${LUA_VERSION})
DKSET(LUA_DL https://www.lua.org/ftp/lua-${LUA_VERSION}.tar.gzp)
DKSET(LUA ${3RDPARTY}/${LUA_NAME})


### INSTALL ###
DKINSTALL(${LUA_DL} lua ${LUA})


### LINK ###
DKINCLUDE(${LUA}/include)
DKINCLUDE(${LUA}/${OS})
WIN_DEBUG_LIB(${LUA}/${OS}/${DEBUG_DIR}/luad.lib)
WIN_RELEASE_LIB(${LUA}/${OS}/${RELEASE_DIR}/lua.lib)
APPLE_DEBUG_LIB(${LUA}/${OS}/${DEBUG_DIR}/luad.a)
APPLE_RELEASE_LIB(${LUA}/${OS}/${RELEASE_DIR}/lua.a)
LINUX_DEBUG_LIB(${LUA}/${OS}/${DEBUG_DIR}/luad.a)
LINUX_RELEASE_LIB(${LUA}/${OS}/${RELEASE_DIR}/lua.a)
RASPBERRY_DEBUG_LIB(${LUA}/${OS}/${DEBUG_DIR}/luad.a)
RASPBERRY_RELEASE_LIB(${LUA}/${OS}/${RELEASE_DIR}/lua.a)
ANDROID_DEBUG_LIB(${LUA}/${OS}/${DEBUG_DIR}/luad.a)
ANDROID_RELEASE_LIB(${LUA}/${OS}/${RELEASE_DIR}/lua.a)


### COMPILE ###
WIN_PATH(${LUA}/${OS})
WIN32_COMMAND(${DKCMAKE_BUILD} ${LUA})
WIN64_COMMAND(${DKCMAKE_BUILD} ${LUA})
WIN_VS(${LUA_NAME} lua.sln lua)


MAC_PATH(${LUA}/${OS})
MAC32_COMMAND(${DKCMAKE_BUILD} ${LUA})
MAC64_COMMAND(${DKCMAKE_BUILD} ${LUA})
MAC_XCODE(${LUA_NAME} lua)


IOS_PATH(${LUA}/${OS})
IOS32_COMMAND(${DKCMAKE_BUILD} ${LUA})
IOS64_COMMAND(${DKCMAKE_BUILD} ${LUA})
IOS_XCODE(${LUA_NAME} lua)


IOSSIM_PATH(${LUA}/${OS})
IOSSIM32_COMMAND(${DKCMAKE_BUILD} ${LUA})
IOSSIM64_COMMAND(${DKCMAKE_BUILD} ${LUA})
IOSSIM_XCODE(${LUA_NAME} lua)


LINUX_DEBUG_PATH(${LUA}/${OS}/${DEBUG_DIR})
LINUX_DEBUG_COMMAND(${DKCMAKE_BUILD} ${LUA})
LINUX_DEBUG_COMMAND(make lua)

LINUX_RELEASE_PATH(${LUA}/${OS}/${RELEASE_DIR})
LINUX_RELEASE_COMMAND(${DKCMAKE_BUILD} ${LUA})
LINUX_RELEASE_COMMAND(make lua)


RASPBERRY_DEBUG_PATH(${LUA}/${OS}/${DEBUG_DIR})
RASPBERRY_DEBUG_COMMAND(${DKCMAKE_BUILD} ${LUA})
RASPBERRY_DEBUG_COMMAND(make lua)

RASPBERRY_RELEASE_PATH(${LUA}/${OS}/${RELEASE_DIR})
RASPBERRY_RELEASE_COMMAND(${DKCMAKE_BUILD} ${LUA})
RASPBERRY_RELEASE_COMMAND(make lua)


