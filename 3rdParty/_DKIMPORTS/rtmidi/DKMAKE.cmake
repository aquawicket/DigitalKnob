### VERSION ###
DKSET(RTMIDI_VERSION 2.1.0)
DKSET(RTMIDI_NAME rtmidi-${RTMIDI_VERSION})
DKSET(RTMIDI_DL http://www.music.mcgill.ca/~gary/rtmidi/release/${RTMIDI_NAME}.tar.gz)
DKSET(RTMIDI ${3RDPARTY}/${RTMIDI_NAME})


### INSTALL ###
DKINSTALL(${RTMIDI_DL} rtmidi ${RTMIDI})


### LINK ###
DKINCLUDE(${RTMIDI})
if(WIN)
	DKDEFINE(__WINDOWS_MM__)
	LIST(APPEND WIN_LIBS winmm.lib)
endif()
if(MAC)
	DKDEFINE(__MACOSX_CORE__)
endif()
if(LINUX)
	DKDEFINE(__LINUX_ALSA__)
endif()
WIN_DEBUG_LIB(${RTMIDI}/${OS}/${DEBUG_DIR}/RtMidi.lib)
WIN_RELEASE_LIB(${RTMIDI}/${OS}/${RELEASE_DIR}/RtMidi.lib)
