MAC_RELEASE_LIB(${RTMIDI}/${OS}/${RELEASE_DIR}/libRtMidi.a)
IOS_DEBUG_LIB(${RTMIDI}/${OS}/${DEBUG_DIR}/libRtMidi.a)
IOS_RELEASE_LIB(${RTMIDI}/${OS}/${RELEASE_DIR}/libRtMidi.a)
IOSSIM_DEBUG_LIB(${RTMIDI}/${OS}/${DEBUG_DIR}/libRtMidi.a)
