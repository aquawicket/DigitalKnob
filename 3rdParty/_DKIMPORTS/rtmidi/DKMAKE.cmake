MAC64_COMMAND(${CMAKE_COMMAND} -G "Xcode" -DCMAKE_OSX_ARCHITECTURES=x86_64 ${RTMIDI})
MAC_XCODE_DEBUG(rtmidi-${RTMIDI_VERSION} RtMidi)
