LINUX_DEBUG_LIB(${RTMIDI}/${OS}/${DEBUG_DIR}/libRtMidi.a)
LINUX_RELEASE_LIB(${RTMIDI}/${OS}/${RELEASE_DIR}/libRtMidi.a)
RASPBERRY_DEBUG_LIB(${RTMIDI}/${OS}/${DEBUG_DIR}/libRtMidi.a)
