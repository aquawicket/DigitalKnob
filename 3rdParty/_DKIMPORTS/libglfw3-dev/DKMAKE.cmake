if(NOT CMAKE_HOST_UNIX)
	return()
endif()

### INSTALL ###
if(LINUX)
	DKSET(CURRENT_DIR /usr)
	DKCOMMAND(sudo apt -y install libglfw3-dev)
endif()
if(MAC)
	DKCOMMAND(brew install glfw3)
	FIND_LIBRARY(glfw_lib glfw)
	if(NOT glfw_lib)
		APPLE_LIB(${glfw_lib})
	else()
		message(STATUS "Could not locate glfw framework")
	endif()
endif()
