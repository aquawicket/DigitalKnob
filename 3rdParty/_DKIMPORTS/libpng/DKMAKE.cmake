# https://sourceforge.net/projects/libpng/files/libpng17/1.7.0-oldbetas/libpng-1.7.0beta34.tar.gz

DKDEPEND(zlib)

### VERSION ###
DKSET(PNG_MAJOR 1)
DKSET(PNG_MINOR 7)
DKSET(PNG_BUILD 0beta34)
DKSET(PNG_VERSION ${PNG_MAJOR}.${PNG_MINOR}.${PNG_BUILD})
DKSET(PNG_NAME libpng-${PNG_VERSION})
DKSET(PNG_DL https://sourceforge.net/projects/libpng/files/libpng${PNG_MAJOR}${PNG_MINOR}/${PNG_MAJOR}.${PNG_MINOR}.0-oldbetas/${PNG_NAME}.tar.gz)
DKSET(PNG ${3RDPARTY}/${PNG_NAME})


### INSTALL ###
DKINSTALL(${PNG_DL} libpng ${PNG})


### DKPLUGINS LINK ###
DKINCLUDE(${PNG})
DKINCLUDE(${PNG}/${OS})
DKINCLUDE(${PNG}/${OS}/${RELEASE_DIR})
ANDROID_INCLUDE(${PNG}/${OS}/$(BUILD_TYPE)/jni)
WIN_DEBUG_LIB(${PNG}/${OS}/${DEBUG_DIR}/libpng${PNG_MAJOR}${PNG_MINOR}_staticd.lib)
WIN_RELEASE_LIB(${PNG}/${OS}/${RELEASE_DIR}/libpng${PNG_MAJOR}${PNG_MINOR}_static.lib)
APPLE_DEBUG_LIB(${PNG}/${OS}/${DEBUG_DIR}/libpng${PNG_MAJOR}${PNG_MINOR}d.a)
APPLE_RELEASE_LIB(${PNG}/${OS}/${RELEASE_DIR}/libpng${PNG_MAJOR}${PNG_MINOR}.a)
LINUX_DEBUG_LIB(${PNG}/${OS}/${DEBUG_DIR}/libpng${PNG_MAJOR}${PNG_MINOR}d.a)
LINUX_RELEASE_LIB(${PNG}/${OS}/${RELEASE_DIR}/libpng${PNG_MAJOR}${PNG_MINOR}.a)
RASPBERRY_DEBUG_LIB(${PNG}/${OS}/${DEBUG_DIR}/libpng${PNG_MAJOR}${PNG_MINOR}d.a)
RASPBERRY_RELEASE_LIB(${PNG}/${OS}/${RELEASE_DIR}/libpng${PNG_MAJOR}${PNG_MINOR}.a)
ANDROID_DEBUG_LIB(${PNG}/${OS}/${DEBUG_DIR}/obj/local/armeabi-v7a/libpng.a)
ANDROID_RELEASE_LIB(${PNG}/${OS}/${RELEASE_DIR}/obj/local/armeabi-v7a/libpng.a)


