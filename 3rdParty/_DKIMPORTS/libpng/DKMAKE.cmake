## http://www.libpng.org/pub/png/libpng.html

### VERSION ###
DKSET(PNG_MAJOR_VERSION 1)
DKSET(PNG_MINOR_VERSION 7)
DKSET(PNG_BUILD_VERSION 0beta34)
DKSET(PNG_VERSION ${PNG_MAJOR_VERSION}.${PNG_MINOR_VERSION}.${PNG_BUILD_VERSION})
DKSET(RNG_NAME libpng-${PNG_VERSION})
DKSET(PNG ${3RDPARTY}/${PNG_NAME})


### INSTALL ###
## https://sourceforge.net/projects/libpng/files/libpng17/1.7.0-oldbetas/libpng-1.7.0beta34.tar.gz
DKINSTALL(https://sourceforge.net/projects/libpng/files/libpng${PNG_MAJOR_VERSION}${PNG_MINOR_VERSION}/${PNG_MAJOR_VERSION}.${PNG_MINOR_VERSION}.0-oldbetas/${PNG_NAME}.tar.gz libpng ${PNG_NAME})


### DKPLUGINS LINK ###
DKINCLUDE(${PNG})
DKINCLUDE(${PNG}/${OS})
DKINCLUDE(${PNG}/${OS}/${RELEASE_DIR})
ANDROID_INCLUDE(${PNG}/${OS}/$(BUILD_TYPE)/jni)
WIN_DEBUG_LIB(${PNG}/${OS}/${DEBUG_DIR}/libpng${PNG_MAJOR_VERSION}${PNG_MINOR_VERSION}_staticd.lib)
WIN_RELEASE_LIB(${PNG}/${OS}/${RELEASE_DIR}/libpng${PNG_MAJOR_VERSION}${PNG_MINOR_VERSION}_static.lib)
APPLE_DEBUG_LIB(${PNG}/${OS}/${DEBUG_DIR}/libpng${PNG_MAJOR_VERSION}${PNG_MINOR_VERSION}d.a)
APPLE_RELEASE_LIB(${PNG}/${OS}/${RELEASE_DIR}/libpng${PNG_MAJOR_VERSION}${PNG_MINOR_VERSION}.a)
LINUX_DEBUG_LIB(${PNG}/${OS}/${DEBUG_DIR}/libpng${PNG_MAJOR_VERSION}${PNG_MINOR_VERSION}d.a)
LINUX_RELEASE_LIB(${PNG}/${OS}/${RELEASE_DIR}/libpng${PNG_MAJOR_VERSION}${PNG_MINOR_VERSION}.a)
RASPBERRY_DEBUG_LIB(${PNG}/${OS}/${DEBUG_DIR}/libpng${PNG_MAJOR_VERSION}${PNG_MINOR_VERSION}d.a)
RASPBERRY_RELEASE_LIB(${PNG}/${OS}/${RELEASE_DIR}/libpng${PNG_MAJOR_VERSION}${PNG_MINOR_VERSION}.a)
ANDROID_DEBUG_LIB(${PNG}/${OS}/${DEBUG_DIR}/obj/local/armeabi-v7a/libpng.a)
ANDROID_RELEASE_LIB(${PNG}/${OS}/${RELEASE_DIR}/obj/local/armeabi-v7a/libpng.a)


### 3RDPARTY LINK ###
DKSET(PNG_WIN -DPNG_INCLUDE_DIR=${PNG} -DPNG_INCLUDE_DIR2=${PNG}/${OS} -DPNG_LIBRARY_DEBUG=${PNG}/${OS}/${DEBUG_DIR}/libpng${PNG_MAJOR_VERSION}${PNG_MINOR_VERSION}_staticd.lib -DPNG_LIBRARY_RELEASE=${PNG}/${OS}/${RELEASE_DIR}/libpng${PNG_MAJOR_VERSION}${PNG_MINOR_VERSION}_static.lib)
DKSET(PNG_APPLE -DPNG_INCLUDE_DIR=${PNG} -DPNG_INCLUDE_DIR2=${PNG}/${OS} -DPNG_LIBRARY_DEBUG=${PNG}/${OS}/${DEBUG_DIR}/libpng${PNG_MAJOR_VERSION}${PNG_MINOR_VERSION}d.a -DPNG_LIBRARY_RELEASE=${PNG}/${OS}/${RELEASE_DIR}/libpng${PNG_MAJOR_VERSION}${PNG_MINOR_VERSION}.a)
DKSET(PNG_LINUX -DPNG_INCLUDE_DIR=${PNG} -DPNG_INCLUDE_DIR2=${PNG}/${OS}/${RELEASE_DIR} -DPNG_LIBRARY_DEBUG=${PNG}/${OS}/${DEBUG_DIR}/libpng${PNG_MAJOR_VERSION}${PNG_MINOR_VERSION}d.a -DPNG_LIBRARY_RELEASE=${PNG}/${OS}/${RELEASE_DIR}/libpng${PNG_MAJOR_VERSION}${PNG_MINOR_VERSION}.a)
DKSET(PNG_RASPBERRY -DPNG_INCLUDE_DIR=${PNG} -DPNG_INCLUDE_DIR2=${PNG}/${OS} -DPNG_LIBRARY_DEBUG=${PNG}/${OS}/${DEBUG_DIR}/libpng${PNG_MAJOR_VERSION}${PNG_MINOR_VERSION}d.a -DPNG_LIBRARY_RELEASE=${PNG}/${OS}/${RELEASE_DIR}/libpng${PNG_MAJOR_VERSION}${PNG_MINOR_VERSION}.a)
DKSET(PNG_ANDROID -DPNG_INCLUDE_DIR=${PNG} -DPNG_INCLUDE_DIR2=${PNG}/${OS} -DPNG_LIBRARY_DEBUG=${PNG}/${OS}/${DEBUG_DIR}/libpng${PNG_MAJOR_VERSION}${PNG_MINOR_VERSION}d.a -DPNG_LIBRARY_RELEASE=${PNG}/${OS}/${RELEASE_DIR}/libpng${PNG_MAJOR_VERSION}${PNG_MINOR_VERSION}.a)
	

### COMPILE ###
WIN_PATH(${PNG}/${OS})
WIN32_COMMAND(${DKCMAKE_WIN32} -DPNG_SHARED=OFF -DPNG_TESTS=OFF ${ZLIB_WIN} ${PNG})
WIN64_COMMAND(${DKCMAKE_WIN64} -DPNG_SHARED=OFF -DPNG_TESTS=OFF ${ZLIB_WIN} ${PNG})
WIN_VS(${PNG_NAME} libpng.sln png${PNG_MAJOR_VERSION}${PNG_MINOR_VERSION}_static)


MAC_PATH(${PNG}/${OS})
MAC_COMMAND(${CMAKE_COMMAND} -G "Xcode" -DCMAKE_OSX_ARCHITECTURES=x86_64 -DPNG_SHARED=OFF -DPNG_TESTS=OFF ${ZLIB_APPLE} ${PNG})
MAC_XCODE_DEBUG(${PNG_NAME} png${PNG_MAJOR_VERSION}${PNG_MINOR_VERSION}_static)
MAC_XCODE_RELEASE(${PNG_NAME} png${PNG_MAJOR_VERSION}${PNG_MINOR_VERSION}_static)


IOS_PATH(${PNG}/${OS})
IOS_COMMAND(${CMAKE_COMMAND} -G "Xcode" -DCMAKE_TOOLCHAIN_FILE=${DKCMAKE}/iOS.cmake -DIOS_PLATFORM=OS -DPNG_SHARED=OFF -DPNG_TESTS=OFF ${ZLIB_APPLE} ${PNG})
IOS_XCODE_DEBUG(${PNG_NAME} png${PNG_MAJOR_VERSION}${PNG_MINOR_VERSION}_static)
IOS_XCODE_RELEASE(${PNG_NAME} png${PNG_MAJOR_VERSION}${PNG_MINOR_VERSION}_static)


IOS_PATH(${PNG}/${OS})
IOSSIM_COMMAND(${CMAKE_COMMAND} -G "Xcode" -DCMAKE_TOOLCHAIN_FILE=${DKCMAKE}/iOS.cmake -DIOS_PLATFORM=SIMULATOR64 -DPNG_SHARED=OFF -DPNG_TESTS=OFF ${ZLIB_APPLE} ${PNG})
IOSSIM_XCODE_DEBUG(${PNG_NAME} png${PNG_MAJOR_VERSION}${PNG_MINOR_VERSION}_static)
IOSSIM_XCODE_RELEASE(${PNG_NAME} png${PNG_MAJOR_VERSION}${PNG_MINOR_VERSION}_static)


LINUX_DEBUG_PATH(${PNG}/${OS}/${DEBUG_DIR})
LINUX_DEBUG_COMMAND(${CMAKE_COMMAND} -G "Unix Makefiles" -DCMAKE_BUILD_TYPE=DEBUG -DPNG_SHARED=OFF -DPNG_TESTS=ON ${ZLIB_LINUX} ${PNG})
LINUX_DEBUG_COMMAND(make all)

LINUX_RELEASE_PATH(${PNG}/${OS}/${RELEASE_DIR})
LINUX_RELEASE_COMMAND(${CMAKE_COMMAND} -G "Unix Makefiles" -DCMAKE_BUILD_TYPE=RELEASE -DPNG_SHARED=OFF -DPNG_TESTS=ON ${ZLIB_LINUX} ${PNG})
LINUX_RELEASE_COMMAND(make all)


RASPBERRY_DEBUG_PATH(${PNG}/${OS}/${DEBUG_DIR})
RASPBERRY_DEBUG_COMMAND(${CMAKE_COMMAND} -G "Unix Makefiles" -DCMAKE_BUILD_TYPE=DEBUG -DPNG_SHARED=ON -DPNG_TESTS=ON ${ZLIB_RASPBERRY} ${PNG})
RASPBERRY_DEBUG_COMMAND(make all)

RASPBERRY_RELEASE_PATH(${PNG}/${OS}/${RELEASE_DIR})
RASPBERRY_RELEASE_COMMAND(${CMAKE_COMMAND} -G "Unix Makefiles" -DCMAKE_BUILD_TYPE=RELEASE -DPNG_SHARED=ON -DPNG_TESTS=ON ${ZLIB_RASPBERRY} ${PNG})
RASPBERRY_RELEASE_COMMAND(make all)


