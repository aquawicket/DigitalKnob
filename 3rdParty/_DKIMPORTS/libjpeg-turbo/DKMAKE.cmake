DKSET(JPEG_VERSION 2.1.1)
DKSET(JPEG_NAME libjpeg-turbo-${JPEG_VERSION})
DKSET(JPEG_DL https://sourceforge.net/projects/libjpeg-turbo/files/${JPEG_VERSION}/${JPEG_NAME}.tar.gz)
#DKSET(JPEG_DL https://downloads.sourceforge.net/libjpeg-turbo/${JPEG_NAME}.tar.gz)
DKSET(JPEG ${3RDPARTY}/${JPEG_NAME})


### INSTALL ###
DKINSTALL(${JPEG_DL} libjpeg-turbo ${JPEG} NOPATCH)


### DKPLUGINS LINK ###
DKINCLUDE(${JPEG})
DKINCLUDE(${JPEG}/${OS})
DKINCLUDE(${JPEG}/${OS}/${DEBUG_DIR})
DKINCLUDE(${JPEG}/${OS}/${RELEASE_DIR})
ANDROID_DKINCLUDE(${JPEG}/${OS}/$(BUILD_TYPE)/jni)
WIN_DEBUG_LIB(${JPEG}/${OS}/${DEBUG_DIR}/turbojpeg-static.lib)
WIN_RELEASE_LIB(${JPEG}/${OS}/${RELEASE_DIR}/turbojpeg-static.lib)
APPLE_DEBUG_LIB(${JPEG}/${OS}/${DEBUG_DIR}/libturbojpeg.a)
