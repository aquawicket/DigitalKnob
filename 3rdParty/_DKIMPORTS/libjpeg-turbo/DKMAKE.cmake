LINUX_DEBUG_LIB(${JPEG}/${OS}/${DEBUG_DIR}/libturbojpeg.a)
LINUX_RELEASE_LIB(${JPEG}/${OS}/${RELEASE_DIR}/libturbojpeg.a)
RASPBERRY_DEBUG_LIB(${JPEG}/${OS}/${DEBUG_DIR}/libturbojpeg.a)
RASPBERRY_RELEASE_LIB(${JPEG}/${OS}/${RELEASE_DIR}/libturbojpeg.a)
##ANDROID_DEBUG_LIB(${JPEG}/${OS}/${DEBUG_DIR}/obj/local/armeabi-v7a/libturbojpeg.a)
##ANDROID_RELEASE_LIB(${JPEG}/${OS}/${RELEASE_DIR}/obj/local/armeabi-v7a/libturbojpeg.a)
ANDROID_DEBUG_LIB(${JPEG}/${OS}/${DEBUG_DIR}/libturbojpeg.a)
ANDROID_RELEASE_LIB(${JPEG}/${OS}/${RELEASE_DIR}/libturbojpeg.a)


### 3RDPARTY LINK ###
DKSET(JPEG_WIN -DCMAKE_C_FLAGS="-I${JPEG}/${OS}" -DJPEG_INCLUDE_DIR=${JPEG} -DJPEG_LIBRARY_RELEASE=${JPEG}/${OS}/${RELEASE_DIR}/turbojpeg-static.lib)
DKSET(JPEG_APPLE -DJPEG_INCLUDE_DIR=${JPEG} -DJPEG_INCLUDE_DIR2=${JPEG}/${OS} -DJPEG_LIBRARY_RELEASE=${JPEG}/${OS}/${RELEASE_DIR}/libturbojpeg.a)
DKSET(JPEG_LINUX_DEBUG -DJPEG_INCLUDE_DIR=${JPEG} -DJPEG_INCLUDE_DIR2=${JPEG}/${OS}/${DEBUG_DIR} -DJPEG_LIBRARY=${JPEG}/${OS}/${DEBUG_DIR}/libturbojpeg.a)
DKSET(JPEG_LINUX_RELEASE -DJPEG_INCLUDE_DIR=${JPEG} -DJPEG_INCLUDE_DIR2=${JPEG}/${OS}/${RELEASE_DIR} -DJPEG_LIBRARY=${JPEG}/${OS}/${RELEASE_DIR}/libturbojpeg.a)
DKSET(JPEG_RASPBERRY_DEBUG -DJPEG_INCLUDE_DIR=${JPEG} -DJPEG_INCLUDE_DIR2=${JPEG}/${OS}/${DEBUG_DIR} -DJPEG_LIBRARY=${JPEG}/${OS}/${DEBUG_DIR}/libturbojpeg.a)
DKSET(JPEG_RASPBERRY_RELEASE -DJPEG_INCLUDE_DIR=${JPEG} -DJPEG_INCLUDE_DIR2=${JPEG}/${OS}/${RELEASE_DIR} -DJPEG_LIBRARY=${JPEG}/${OS}/${RELEASE_DIR}/libturbojpeg.a)
DKSET(JPEG_ANDROID -DJPEG_INCLUDE_DIR=${JPEG} -DJPEG_INCLUDE_DIR2=${JPEG}/${OS} -DJPEG_LIBRARY=${JPEG}/${OS}/${RELEASE_DIR}/libturbojpeg.a)


