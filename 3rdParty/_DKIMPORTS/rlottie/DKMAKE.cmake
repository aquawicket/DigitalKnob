MAC_PATH(${RLOTTIE}/${OS})
MAC32_COMMAND(${DKCMAKE_BUILD} ${RLOTTIE})
MAC64_COMMAND(${DKCMAKE_BUILD} ${RLOTTIE})
MAC_XCODE(${RLOTTIE_NAME} rlottie)


IOS_PATH(${RLOTTIE}/${OS})
IOS32_COMMAND(${DKCMAKE_BUILD} ${RLOTTIE})
IOS64_COMMAND(${DKCMAKE_BUILD} ${RLOTTIE})
IOS_XCODE(${RLOTTIE_NAME} rlottie)


IOSSIM_PATH(${RLOTTIE}/${OS})
IOSSIM32_COMMAND(${DKCMAKE_BUILD} ${RLOTTIE})
IOSSIM64_COMMAND(${DKCMAKE_BUILD} ${RLOTTIE})
IOSSIM_XCODE(${RLOTTIE_NAME} rlottie)


LINUX_DEBUG_PATH(${RLOTTIE}/${OS}/${DEBUG_DIR})
LINUX_DEBUG_COMMAND(${DKCMAKE_BUILD} ${RLOTTIE})
LINUX_DEBUG_COMMAND(make rlottie)

LINUX_RELEASE_PATH(${RLOTTIE}/${OS}/${RELEASE_DIR})
LINUX_RELEASE_COMMAND(${DKCMAKE_BUILD} ${RLOTTIE})
LINUX_RELEASE_COMMAND(make rlottie)


RASPBERRY_DEBUG_PATH(${RLOTTIE}/${OS}/${DEBUG_DIR})
RASPBERRY_DEBUG_COMMAND(${DKCMAKE_BUILD} ${RLOTTIE})
RASPBERRY_DEBUG_COMMAND(make rlottie)

RASPBERRY_RELEASE_PATH(${RLOTTIE}/${OS}/${RELEASE_DIR})
