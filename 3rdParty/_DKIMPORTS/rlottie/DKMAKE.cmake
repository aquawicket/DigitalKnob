### COMPILE ###
WIN_PATH(${RLOTTIE}/${OS})
WIN32_COMMAND(${DKCMAKE_BUILD} /EHsc ${RLOTTIE})
WIN64_COMMAND(${DKCMAKE_BUILD} /EHsc ${RLOTTIE})
