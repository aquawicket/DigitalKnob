### VERSION ###
DKSET(RLOTTIE_VERSION 0.2)
DKSET(RLOTTIE_NAME rlottie-${RLOTTIE_VERSION})
DKSET(RLOTTIE_DL https://github.com/Samsung/rlottie/archive/refs/tags/v${RLOTTIE_VERSION}.zip)
DKSET(RLOTTIE ${3RDPARTY}/${RLOTTIE_NAME})


### INSTALL ###
DKINSTALL(${RLOTTIE_DL} rlottie ${RLOTTIE})


### LINK ###
DKINCLUDE(${RLOTTIE}/inc)
DKINCLUDE(${RLOTTIE}/${OS})
WIN_DEBUG_LIB(${RLOTTIE}/${OS}/${DEBUG_DIR}/rlottie.lib)
