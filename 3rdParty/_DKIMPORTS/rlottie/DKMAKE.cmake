MAC_DEBUG_LIB(${RLOTTIE}/${OS}/${DEBUG_DIR}/librlottie.a)
MAC_RELEASE_LIB(${RLOTTIE}/${OS}/${RELEASE_DIR}/librlottie.a)
IOS_DEBUG_LIB(${RLOTTIE}/${OS}/${DEBUG_DIR}/librlottie.a)
IOS_RELEASE_LIB(${RLOTTIE}/${OS}/${RELEASE_DIR}/librlottie.a)
IOSSIM_DEBUG_LIB(${RLOTTIE}/${OS}/${DEBUG_DIR}/librlottie.a)
IOSSIM_RELEASE_LIB(${RLOTTIE}/${OS}/${RELEASE_DIR}/librlottie.a)
LINUX_DEBUG_LIB(${RLOTTIE}/${OS}/${DEBUG_DIR}/librlottie.a)
LINUX_RELEASE_LIB(${RLOTTIE}/${OS}/${RELEASE_DIR}/librlottie.a)
RASPBERRY_DEBUG_LIB(${RLOTTIE}/${OS}/${DEBUG_DIR}/librlottie.a)
RASPBERRY_RELEASE_LIB(${RLOTTIE}/${OS}/${RELEASE_DIR}/librlottie.a)
ANDROID_DEBUG_LIB(${RLOTTIE}/${OS}/${DEBUG_DIR}/librlottie.a)
