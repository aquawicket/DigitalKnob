### INSTALL ###
IF(NOT EXISTS ${3RDPARTY}/SDL2_gif)
	DKEXTRACT(${DKIMPORTS}/SDL2_gif/gif_2_lib.zip ${3RDPARTY})
	DKRENAME(${3RDPARTY}/SDL2 ${3RDPARTY}/SDL2_gif)
	DKCOPY(${DKIMPORTS}/SDL2_gif ${3RDPARTY}/SDL2_gif TRUE)
ENDIF()



