WIN64_COMMAND(${CMAKE_COMMAND} -G ${GENERATOR} -A x64 "-DCMAKE_CXX_FLAGS=/DWIN32 /D_WINDOWS /W3 /nologo" "-DCMAKE_CXX_FLAGS_DEBUG=/MTd /Od /Ob0 /Zi /RTC1 /DDEBUG /D_DEBUG" "-DCMAKE_CXX_FLAGS_RELEASE=/MT /O2 /Ob2 /DNDEBUG" -DFFMPEG_INCLUDE_DIR=${FFMPEG}/include -DSDL2_DIR=${SDL} -DSDL2_INCLUDE_DIR=${SDL}/include -DSDL2_LIBRARY=${SDL}/${OS}/${RELEASE_DIR}/SDL2.lib ${WAAVE})
WIN64_VS_DEBUG(${WAAVE_VERSION} waave.sln waave)
