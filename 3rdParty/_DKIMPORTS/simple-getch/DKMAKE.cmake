ANDROID_PATH(${GETCH}/${OS})
ANDROID32_COMMAND(${DKCMAKE_ANDROID32} ${GETCH})
ANDROID64_COMMAND(${DKCMAKE_ANDROID64} ${GETCH})
ANDROID_VS(${GETCH_NAME} getch.sln getch)
