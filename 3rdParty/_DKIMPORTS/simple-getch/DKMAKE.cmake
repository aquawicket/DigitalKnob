### DEPENDS ###
#DKDEPEND(libname)


### VERSION ###
DKSET(GETCH_VERSION master)
DKSET(GETCH_NAME getch-${GETCH_VERSION})
DKSET(GETCH_DL https://github.com/mouuff/simple-getch/archive/refs/heads/${GETCH_VERSION}.zip)
DKSET(GETCH ${3RDPARTY}/${GETCH_NAME})


### INSTALL ###
DKINSTALL(${GETCH_DL} getch ${GETCH})


### LINK ###
DKINCLUDE(${GETCH}/include)
DKINCLUDE(${GETCH}/${OS})
WIN_DEBUG_LIB(${GETCH}/${OS}/${DEBUG_DIR}/getchd.lib)
WIN_RELEASE_LIB(${GETCH}/${OS}/${RELEASE_DIR}/getch.lib)
APPLE_DEBUG_LIB(${GETCH}/${OS}/${DEBUG_DIR}/getchd.a)
APPLE_RELEASE_LIB(${GETCH}/${OS}/${RELEASE_DIR}/getch.a)
LINUX_DEBUG_LIB(${GETCH}/${OS}/${DEBUG_DIR}/getchd.a)
LINUX_RELEASE_LIB(${GETCH}/${OS}/${RELEASE_DIR}/getch.a)
RASPBERRY_DEBUG_LIB(${GETCH}/${OS}/${DEBUG_DIR}/getchd.a)
RASPBERRY_RELEASE_LIB(${GETCH}/${OS}/${RELEASE_DIR}/getch.a)
ANDROID_DEBUG_LIB(${GETCH}/${OS}/${DEBUG_DIR}/getchd.a)
ANDROID_RELEASE_LIB(${GETCH}/${OS}/${RELEASE_DIR}/getch.a)


### COMPILE ###
WIN_PATH(${GETCH}/${OS})
WIN32_COMMAND(${DKCMAKE_WIN32} ${GETCH})
WIN64_COMMAND(${DKCMAKE_WIN64} ${GETCH})
WIN_VS(${GETCH_NAME} getch.sln getch)


MAC_PATH(${GETCH}/${OS})
MAC32_COMMAND(${DKCMAKE_MAC32} ${GETCH})
MAC64_COMMAND(${DKCMAKE_MAC64} ${GETCH})
MAC_XCODE(${GETCH_NAME} getch)


IOS_PATH(${GETCH}/${OS})
IOS32_COMMAND(${DKCMAKE_IOS32} ${GETCH})
IOS64_COMMAND(${DKCMAKE_IOS64} ${GETCH})
IOS_XCODE(${GETCH_NAME} getch)


IOSSIM_PATH(${GETCH}/${OS})
IOSSIM32_COMMAND(${DKCMAKE_IOSSIM32} ${GETCH})
IOSSIM64_COMMAND(${DKCMAKE_IOSSIM64} ${GETCH})
IOSSIM_XCODE(${GETCH_NAME} getch)


LINUX_DEBUG_PATH(${GETCH}/${OS}/${DEBUG_DIR})
LINUX_DEBUG_COMMAND(${DKCMAKE_LINUX_DEBUG} ${GETCH})
LINUX_DEBUG_COMMAND(make getch)

LINUX_RELEASE_PATH(${GETCH}/${OS}/${RELEASE_DIR})
LINUX_RELEASE_COMMAND(${DKCMAKE_LINUX_RELEASE} ${GETCH})
LINUX_RELEASE_COMMAND(make getch)


RASPBERRY_DEBUG_PATH(${GETCH}/${OS}/${DEBUG_DIR})
RASPBERRY_DEBUG_COMMAND(${DKCMAKE_RASPBERRY_DEBUG} ${GETCH})
RASPBERRY_DEBUG_COMMAND(make getch)

RASPBERRY_RELEASE_PATH(${GETCH}/${OS}/${RELEASE_DIR})
RASPBERRY_RELEASE_COMMAND(${DKCMAKE_RASPBERRY_RELEASE} ${GETCH})
RASPBERRY_RELEASE_COMMAND(make getch)


