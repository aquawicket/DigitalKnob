## https://www.libsdl.org/projects/SDL_mixer/release/SDL2_mixer-2.0.4.zip

### DEPENDS ###
DKDEPEND(smpeg2)
IF(NOT WIN_64)
	DKDEPEND(libogg)
	DKDEPEND(libvorbis)
ENDIF()


### VERSION ###
DKSET(SDLMIXER_VERSION 2.0.1)
DKSET(SDLMIXER ${3RDPARTY}/SDL2_mixer-${SDLMIXER_VERSION})



### INSTALL ###
DKINSTALL(https://www.libsdl.org/projects/SDL_mixer/release/SDL2_mixer-${SDLMIXER_VERSION}.zip SDL2_mixer ${SDLMIXER})



### DKPLUGINS LINK ###
DKINCLUDE(${SDLMIXER})
WIN_DEBUG_LIB(${SDLMIXER}/${OS}/lib/${DEBUG_DIR}/SDL_mixer.lib)
WIN_RELEASE_LIB(${SDLMIXER}/${OS}/lib/${RELEASE_DIR}/SDL_mixer.lib)
APPLE_DEBUG_LIB(${SDLMIXER}/${OS}/lib/${DEBUG_DIR}/SDL_mixer.a)
APPLE_RELEASE_LIB(${SDLMIXER}/${OS}/lib/${RELEASE_DIR}/SDL_mixer.a)
LINUX_DEBUG_LIB(${SDLMIXER}/${OS}/${DEBUG_DIR}/lib/SDL_mixer.a)
LINUX_RELEASE_LIB(${SDLMIXER}/${OS}/${RELEASE_DIR}/lib/SDL_mixer.a)
RASPBERRY_DEBUG_LIB(${SDLMIXER}/${OS}/${DEBUG_DIR}/lib/SDL_mixer.a)
RASPBERRY_RELEASE_LIB(${SDLMIXER}/${OS}/${RELEASE_DIR}/lib/SDL_mixer.a)
ANDROID_DEBUG_LIB(${SDLMIXER}/${OS}/${DEBUG_DIR}/obj/local/armeabi-v7a/libSDL2_mixer.a)
ANDROID_RELEASE_LIB(${SDLMIXER}/${OS}/${RELEASE_DIR}/obj/local/armeabi-v7a/libSDL2_mixer.a)


### COMPILE ###
WIN_PATH(${SDLMIXER}/${OS})
WIN32_COMMAND(${DKCMAKE_WIN32} ${SDL2_WIN} ${VORBIS_WIN} ${OGG_INCLUDE} ${SMPEG2_WIN} ${SDLMIXER})
WIN64_COMMAND(${DKCMAKE_WIN64} ${SDL2_WIN} ${VORBIS_WIN} ${OGG_INCLUDE} ${SMPEG2_WIN} ${SDLMIXER})
WIN_VS(SDL2_mixer-${SDLMIXER_VERSION} SDLMIXER.sln SDLMIXER)


MAC_PATH(${SDLMIXER}/${OS})
MAC64_COMMAND(${DKCMAKE_MAC64} ${SDL2_APPLE} ${VORBIS_APPLE} ${OGG_INCLUDE} ${SMPEG2_APPLE} ${SDLMIXER})
MAC_XCODE(SDL2_mixer-${SDLMIXER_VERSION} SDLMIXER)


IOS_PATH(${SDLMIXER}/${OS})
IOS64_COMMAND(${DKCMAKE_IOS64} ${SDL2_APPLE} ${VORBIS_APPLE} ${OGG_INCLUDE} ${SMPEG2_APPLE} ${SDLMIXER})
IOS_XCODE(SDL2_mixer-${SDLMIXER_VERSION} SDLMIXER)


IOSSIM_PATH(${SDLMIXER}/${OS})
IOSSIM64_COMMAND(${DKCMAKE_IOSSIM64} ${SDL2_APPLE} ${VORBIS_APPLE} ${OGG_INCLUDE} ${SMPEG2_APPLE} ${SDLMIXER})
IOSSIM_XCODE(SDL2_mixer-${SDLMIXER_VERSION} SDLMIXER)


LINUX_DEBUG_PATH(${SDLMIXER}/${OS}/${DEBUG_DIR})
LINUX_DEBUG_COMMAND(${DKCMAKE_LINUX_DEBUG} -DCMAKE_C_FLAGS=-fPIC ${SDL2_LINUX} ${VORBIS_LINUX} ${OGG_INCLUDE} ${SMPEG2_LINUX} ${SDLMIXER})
LINUX_DEBUG_COMMAND(make SDLMIXER)

LINUX_RELEASE_PATH(${SDLMIXER}/${OS}/${RELEASE_DIR})
LINUX_RELEASE_COMMAND(${DKCMAKE_LINUX_RELEASE} -DCMAKE_C_FLAGS=-fPIC ${SDL2_LINUX} ${VORBIS_LINUX} ${OGG_INCLUDE} ${SMPEG2_LINUX} ${SDLMIXER})
LINUX_RELEASE_COMMAND(make SDLMIXER)


RASPBERRY_DEBUG_PATH(${SDLMIXER}/${OS}/${DEBUG_DIR})
RASPBERRY_DEBUG_COMMAND(${DKCMAKE_RASPBERRY_DEBUG} -DCMAKE_C_FLAGS=-fPIC ${SDL2_RASPBERRY} ${VORBIS_RASPBERRY} ${OGG_INCLUDE} ${SMPEG2_RASPBERRY} ${SDLMIXER})
RASPBERRY_DEBUG_COMMAND(make SDLMIXER)

RASPBERRY_RELEASE_PATH(${SDLMIXER}/${OS}/${RELEASE_DIR})
RASPBERRY_RELEASE_COMMAND(${DKCMAKE_RASPBERRY_RELEASE} -DCMAKE_C_FLAGS=-fPIC ${SDL2_RASPBERRY} ${VORBIS_RASPBERRY} ${OGG_INCLUDE} ${SMPEG2_RASPBERRY} ${SDLMIXER})
RASPBERRY_RELEASE_COMMAND(make SDLMIXER)


ANDROID_NDK(SDL2_mixer-${SDLMIXER_VERSION})
