### DKDEPENDS ###
DKDEPEND(zlib)
DKDEPEND(freetype)
DKDEPEND(libpng)

### VERSION ###
DKSET(PODOFO_VERSION 0.9.5)
DKSET(PODOFO ${3RDPARTY}/podofo-${PODOFO_VERSION})

### INSTALL ###
## DKINSTALL(www.internet.com/podofo-0.9.5.tar.gz podofo-0.9.5 ${PODOFO})



### LINK ###
DKINCLUDE(${PODOFO})
DKINCLUDE(${PODOFO}/podofo)
DKINCLUDE(${PODOFO}/${OS})
DKINCLUDE(${PODOFO}/${OS}/${RELEASE_DIR})
WIN_DEBUG_LIB(${PODOFO}/${OS}/src/Debug/podofo.lib)
WIN_RELEASE_LIB(${PODOFO}/${OS}/src/${RELEASE_DIR}/podofo.lib)
MAC_DEBUG_LIB(${PODOFO}/${OS}/src/${DEBUG_DIR}/libpodofo.a)
MAC_RELEASE_LIB(${PODOFO}/${OS}/src/${RELEASE_DIR}/libpodofo.a)
IOS_DEBUG_LIB(${PODOFO}/${OS}/src/${DEBUG_DIR}/libpodofo.a)
IOS_RELEASE_LIB(${PODOFO}/${OS}/src/${RELEASE_DIR}/libpodofo.a)
IOSSIM_DEBUG_LIB(${PODOFO}/${OS}/src/${DEBUG_DIR}/libpodofo.a)
IOSSIM_RELEASE_LIB(${PODOFO}/${OS}/src/${RELEASE_DIR}/libpodofo.a)
LINUX_DEBUG_LIB(${PODOFO}/${OS}/Debug/src/libpodofo.a)
LINUX_RELEASE_LIB(${PODOFO}/${OS}/${RELEASE_DIR}/src/libpodofo.a)
ANDROID_DEBUG_LIB(${PODOFO}/${OS}/Debug/obj/local/armeabi-v7a/libpodofo.a)
ANDROID_RELEASE_LIB(${PODOFO}/${OS}/${RELEASE_DIR}/obj/local/armeabi-v7a/libpodofo.a)


### COMPILE ###
WIN_PATH(${PODOFO}/${OS})
WIN32_COMMAND(${DKCMAKE_WIN32} "-DCMAKE_CXX_FLAGS=/DWIN32 /D_WINDOWS /W3 /nologo /I${ZLIB}/${OS}" -DPODOFO_BUILD_STATIC=ON ${ZLIB_WIN32} ${FREETYPE_WIN32} ${PNG_WIN32} ${PODOFO})
WIN64_COMMAND(${DKCMAKE_WIN64} "-DCMAKE_CXX_FLAGS=/DWIN64 /D_WINDOWS /W3 /nologo /I${ZLIB}/${OS}" -DPODOFO_BUILD_STATIC=ON ${ZLIB_WIN64} ${FREETYPE_WIN64} ${PNG_WIN64} ${PODOFO})
WIN_VS(podofo-${PODOFO_VERSION} PoDoFo.sln podofo_static)


MAC_PATH(${PODOFO}/${OS})
MAC64_COMMAND(${DKCMAKE_MAC64} -DPODOFO_BUILD_STATIC=ON -DPODOFO_NO_FONTMANAGER=ON ${ZLIB_MAC} ${FREETYPE_MAC} ${PNG_MAC} ${PODOFO})
MAC_XCODE(podofo-${PODOFO_VERSION} podofo_static)


IOS_PATH(${PODOFO}/${OS})
IOS64_COMMAND(${DKCMAKE_IOS64} -DPODOFO_BUILD_STATIC=ON -DPODOFO_NO_FONTMANAGER=ON ${ZLIB_IOS} ${FREETYPE_IOS} ${PNG_IOS} ${PODOFO})
IOS_XCODE(podofo-${PODOFO_VERSION} podofo_static)


IOSSIM_PATH(${PODOFO}/${OS})
IOSSIM64_COMMAND(${DCMAKE_IOSSIM64} -DPODOFO_BUILD_STATIC=ON -DPODOFO_NO_FONTMANAGER=ON ${ZLIB_IOSSIM} ${FREETYPE_IOSSIM} ${PNG_IOSSIM} ${PODOFO})
IOSSIM_XCODE(podofo-${PODOFO_VERSION} podofo_static)


