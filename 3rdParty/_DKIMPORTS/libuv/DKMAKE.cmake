## ANDROID_NDK_RELEASE(libuv-${UV_VERSION})
ANDROID_PATH(${UV}/${OS})
ANDROID32_COMMAND(${DKCMAKE_ANDROID32} ${UV})
ANDROID64_COMMAND(${DKCMAKE_ANDROID64} ${UV})
ANDROID_VS(libuv-${UV_VERSION} libuv.sln uv_a)