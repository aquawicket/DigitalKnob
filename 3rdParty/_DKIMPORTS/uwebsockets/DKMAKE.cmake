ANDROID_PATH(${UWEBSOCKETS}/${OS})
ANDROID32_COMMAND(${DKCMAKE_WIN32} ${ZLIB_ANDROID} ${LIBUV_ANDROID} ${OPENSSL_ANDROID} ${UWEBSOCKETS})
ANDROID64_COMMAND(${DKCMAKE_WIN64} ${ZLIB_ANDROID} ${LIBUV_ANDROID} ${OPENSSL_ANDROID} ${UWEBSOCKETS})
ANDROID_VS(${UWEBSOCKETS_NAME} µWebSockets.sln uWS)
