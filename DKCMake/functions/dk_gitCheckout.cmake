function(dk_gitCheckout)
	message("dk_gitCheckout(${ARGV+})")
	dk_debugFunc(1)
	
	dk_depend(git)
	
	execute_process(COMMAND "${GIT_EXE}" checkout ${ARGV0})
endfunction()



