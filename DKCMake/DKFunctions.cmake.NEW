	elseif(RASPBERRY_HOST)
		dk_todo() # TODO
		set(appDirectory "/")
	elseif(ANDROID_ANDROID)
		dk_todo() # TODO
		set(appDirectory "/")
	endif()
	set(${result} ${appDirectory} PARENT_SCOPE)
endfunction()

