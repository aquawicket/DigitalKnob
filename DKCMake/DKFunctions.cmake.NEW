function(dk_getAppName path result)
	dk_getFilename(${path} fileName)
	dk_removeExtension(${fileName} fileNameNoExt)
	dk_debug(fileNameNoExt = ${fileNameNoExt})
	set(${result} ${fileNameNoExt} PARENT_SCOPE)
endfunction()

