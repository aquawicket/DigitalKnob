<html>
<HEAD>
<title>dk_vbScript</title>
<HTA:APPLICATION SCROLL="yes" SINGLEINSTANCE="yes">
<script Language=vbscript>
    Dim loaded : loaded = False

    Sub CheckLoaded()
        If loaded Then
            MsgBox("Yes, the script loaded.")
        Else
            MsgBox("Oh dear! The script hasn't loaded.")
        End If
    End Sub

    Sub Window_OnLoad
        setTimeout "CheckLoaded", 1000, "VBScript"
    End Sub
</script>
<script language="VBScript" src="dk_vbScript.vbs"></script>
</HEAD>
<BODY>
</BODY>
</html>