#!/bin/sh
[ -z "${DKINIT}" ] && . "$(dirname $0)/DK"


##################################################################################
# dk_getUsername(<output>)
#
#
dk_getUsername () {
	dk_debugFunc
	[ $# -ne 1 ] && dk_error "${FUNCNAME[0]}(): incorrect number of arguments"
	
	if [ -n "${USER-}" ]; then
		DKUSERNAME=$USER
	elif [ -n "${USERNAME-}" ]; then
		DKUSERNAME=$USERNAME
	fi
	
	eval "$1=${DKUSERNAME}"
}



DKTEST() { ####### DKTEST ####### DKTEST ####### DKTEST ####### DKTEST ####### DKTEST ###

	dk_getUsername _username
	echo "_username = ${_username}"
}