#[ -n "$include_dk_test" ] && exit || export readonly include_dk_test=1
[ -z "$DKINIT" ] && . ./DK


##################################################################################
# dk_getUsername()
#
#
dk_getUsername () {
	dk_debugFunc
	
	if [ -n "${USER-}" ]; then
		dk_printVar USER
		DKUSERNAME=$USER
	elif [ -n "${USERNAME-}" ]; then
		dk_printVar USERNAME
		DKUSERNAME=$USERNAME
	fi
	dk_printVar DKUSERNAME
}