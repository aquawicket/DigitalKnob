#!/bin/sh
[ -z "${DKINIT}" ] && . "$(dirname $0)/DK"


##################################################################################
# dk_validateSudo()
#
#
dk_validateSudo () {
	dk_debugFunc
	[ $# -gt 0 ] && dk_error "too many arguments"
	
	if command -v "sudo" >/dev/null 2>&1; then
		SUDO="sudo"
	fi
	${SUDO-} echo
}